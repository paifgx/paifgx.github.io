:80 {
    root * /srv
    file_server

    # Enable compression
    encode gzip zstd

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        -Server
    }

    # Cache static assets with hash in filename (immutable)
    @immutable path_regexp immutable \.[a-f0-9]{8}\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2)$
    header @immutable Cache-Control "public, max-age=31536000, immutable"

    # Cache other static assets
    @static path *.jpg *.jpeg *.png *.gif *.ico *.svg *.woff *.woff2 *.css *.js
    header @static Cache-Control "public, max-age=604800"

    # SPA fallback - try file, then directory, then index.html
    try_files {path} {path}/ {path}.html /index.html

    # Block hidden files
    @hidden path */.*
    respond @hidden 404

    # Handle errors
    handle_errors {
        respond "{err.status_code} {err.status_text}"
    }
}

