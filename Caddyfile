:80 {
    root * /srv
    file_server

    # Enable compression
    encode gzip zstd

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self';"
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        -Server
    }

    # Cache static assets with hash in filename (immutable)
    @immutable path_regexp immutable \.[a-f0-9]{8}\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2)$
    header @immutable Cache-Control "public, max-age=31536000, immutable"

    # Cache other static assets
    @static path *.jpg *.jpeg *.png *.gif *.ico *.svg *.woff *.woff2 *.css *.js
    header @static Cache-Control "public, max-age=604800"

    # SPA fallback - try file, then directory, then 404.html
    try_files {path} {path}/ {path}.html /404.html

    # Block hidden files (but allow /.well-known/* for MTA-STS etc.)
    @hidden {
        path */.*
        not path /.well-known/*
    }
    respond @hidden 404

    # Handle errors
    handle_errors {
        respond "{err.status_code} {err.status_text}"
    }
}

