---
import {
  business,
  contact,
  focusAreas,
  currentMandates,
  footerNavigation,
} from "../config/site";
---

<footer class="bg-gray-900">
  <div
    class="mx-auto max-w-7xl overflow-hidden px-4 py-12 sm:px-6 sm:py-24 lg:px-8"
  >
    <nav
      class="-mb-6 flex flex-wrap justify-center gap-x-12 gap-y-3 text-sm/6"
      aria-label="Footer"
    >
      {
        footerNavigation.map((item) => (
          <a href={item.href} class="text-gray-400 hover:text-white">
            {item.name}
          </a>
        ))
      }
    </nav>

    <div
      class="mt-16 grid gap-8 text-sm/6 text-gray-300 sm:grid-cols-2 sm:gap-10 lg:grid-cols-3"
    >
      <div>
        <p class="font-semibold text-white">Direkter Kontakt</p>
        <ul class="mt-4 space-y-2">
          <li>
            <a
              href={`mailto:${contact.email}`}
              class="hover:text-white underline-offset-4 hover:underline"
            >
              {contact.email}
            </a>
          </li>
          <li>
            <a
              href={contact.websites.main}
              class="hover:text-white underline-offset-4 hover:underline"
              rel="noopener noreferrer"
              target="_blank"
            >
              www.garten.ai
            </a>
          </li>
          <li>
            <a
              href={contact.linkedin.url}
              class="hover:text-white underline-offset-4 hover:underline"
              rel="noopener noreferrer"
              target="_blank"
            >
              LinkedIn · {contact.linkedin.handle}
            </a>
          </li>
        </ul>
      </div>

      <div>
        <p class="font-semibold text-white">Fokusfelder</p>
        <ul class="mt-4 space-y-2">
          {focusAreas.map((area) => <li>{area.title}</li>)}
        </ul>
      </div>

      <div>
        <p class="font-semibold text-white">Ausgewählte Mandate</p>
        <ul class="mt-4 space-y-2">
          {
            currentMandates.map((mandate) => (
              <li>
                {mandate.company} · {mandate.role}
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="mt-10 text-center text-sm/6 text-gray-400">
      <p>
        &copy; {new Date().getFullYear()}
        {business.owner}. Alle Rechte vorbehalten.
      </p>
      <p>
        Developed by <span class="text-red-500">&hearts;</span> with <a
          href="https://astro.build/"
          target="_blank">Astro</a
        >, <a href="https://tailwindcss.com/" target="_blank">Tailwind</a> &amp;
        <a href="https://vuejs.org/" target="_blank">Vue.js</a>.
      </p>
    </div>
  </div>
</footer>
