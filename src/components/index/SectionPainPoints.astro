---
import SectionSubtitle from "../ui/SectionSubtitle.astro";
import { painPoints } from "../../data/home";
import { iconMap, type IconName } from "../../utils/icons";
---

<section class="section-base">
  <div class="absolute inset-0 -z-10">
    <div
      class="absolute top-0 right-0 -mr-40 -mt-40 h-[600px] w-[600px] rounded-full bg-brand-blue/5 blur-3xl dark:bg-brand-blue/10"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 -ml-40 -mb-40 h-[600px] w-[600px] rounded-full bg-brand-gold/5 blur-3xl dark:bg-brand-gold/5"
    >
    </div>
  </div>

  <div class="mx-auto max-w-7xl relative z-10">
    <div class="mx-auto max-w-2xl text-center mb-16">
      <SectionSubtitle>Herausforderungen</SectionSubtitle>
      <h2
        class="mt-2 text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
      >
        Erkennen Sie Ihren Alltag wieder?
      </h2>
      <p class="mt-4 text-lg leading-8 text-gray-600 dark:text-gray-300">
        Wenn Sie sich in mehreren dieser Punkte wiederfinden, dann sind Sie
        nicht allein – und es gibt einen besseren Weg.
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        painPoints.map((point) => {
          const Icon = iconMap[point.icon as IconName];
          return (
            <div class="group relative flex flex-col gap-5 rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-200 dark:bg-white/5 dark:ring-white/10 transition-all hover:shadow-xl hover:ring-brand-blue/30 hover:-translate-y-1 h-full overflow-hidden">
              <div class="absolute top-0 left-0 w-full h-1 bg-linear-to-r from-gray-200 to-gray-200 group-hover:from-brand-blue group-hover:to-indigo-500 transition-all duration-500" />

              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gray-50 text-brand-blue group-hover:bg-brand-blue group-hover:text-white transition-colors duration-300 dark:bg-white/10 dark:text-brand-gold dark:group-hover:bg-brand-gold dark:group-hover:text-brand-dark">
                <Icon class="h-6 w-6" />
              </div>

              <div>
                <h3 class="text-lg font-bold leading-tight text-gray-900 dark:text-white mb-3">
                  {point.title}
                </h3>
                <p class="text-base leading-relaxed text-gray-600 dark:text-gray-300">
                  {point.description}
                </p>
              </div>
            </div>
          );
        })
      }
    </div>

    <div class="mt-12 text-center">
      <p class="text-lg font-medium text-gray-700 dark:text-gray-300">
        Genau an diesen Stellen setze ich an – ein Kernprozess nach dem anderen.
      </p>
    </div>
  </div>
</section>
