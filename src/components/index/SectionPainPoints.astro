---
import SectionSubtitle from "../ui/SectionSubtitle.astro";
import { painPoints } from "../../data/home";
import { iconMap, type IconName } from "../../utils/icons";
---

<section class="section-base">
  <div class="absolute inset-0 -z-10">
    <div
      class="absolute top-0 right-0 -mr-40 -mt-40 h-[600px] w-[600px] rounded-full bg-brand-blue/5 blur-3xl dark:bg-brand-blue/10"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 -ml-40 -mb-40 h-[600px] w-[600px] rounded-full bg-brand-gold/5 blur-3xl dark:bg-brand-gold/5"
    >
    </div>
  </div>

  <div class="mx-auto max-w-7xl relative z-10">
    <div class="mx-auto max-w-2xl text-center mb-16">
      <SectionSubtitle>Herausforderungen</SectionSubtitle>
      <h2
        class="mt-2 text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
      >
        Erkennen Sie Ihren Alltag wieder?
      </h2>
      <p class="mt-4 text-lg leading-8 text-gray-600 dark:text-gray-300">
        Viele Unternehmen scheitern nicht an der Vision, sondern an der
        Komplexität der Umsetzung.
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        painPoints.map((point) => {
          const Icon = iconMap[point.icon as IconName];
          return (
            <div class="relative flex flex-col gap-4 rounded-2xl bg-white p-8 shadow-lg shadow-brand-blue/5 ring-1 ring-gray-200 dark:bg-white/5 dark:ring-white/10 dark:shadow-none transition-all hover:shadow-xl hover:shadow-brand-blue/10 hover:-translate-y-1 h-full">
              <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-brand-blue/10 text-brand-blue dark:bg-brand-gold/10 dark:text-brand-gold">
                <Icon class="h-6 w-6" />
              </div>
              <h3 class="text-lg font-semibold leading-8 text-gray-900 dark:text-white">
                {point.title}
              </h3>
              <p class="text-base leading-7 text-gray-600 dark:text-gray-300">
                {point.description}
              </p>
            </div>
          );
        })
      }
    </div>

    <div class="mt-12 text-center">
      <p
        class="text-lg font-medium text-brand-blue dark:text-brand-gold text-glow"
      >
        Diese Probleme lösen wir gemeinsam. Ab heute ist das nicht mehr der
        Fall.
      </p>
    </div>
  </div>
</section>
