---
import { Image } from "astro:assets";
import InfoTooltip from "../ui/InfoTooltip.astro";
import heroImage from "../../assets/DSC00758.jpg";
import { contact, uspPrimary, tagline } from "../../config/site";
---

<section
  id="hero"
  aria-label="Hauptbereich"
  class="relative min-h-[calc(100vh-4rem)] bg-white dark:bg-brand-dark overflow-hidden lg:flex lg:items-center"
>
  <div
    class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full z-0 pointer-events-none overflow-hidden"
  >
    <div
      class="absolute top-[-10%] left-[-10%] w-[50vw] h-[50vw] bg-brand-blue opacity-10 blur-[120px] rounded-full mix-blend-screen"
    >
    </div>
    <div
      class="absolute bottom-[-10%] right-[-10%] w-[40vw] h-[40vw] bg-brand-blue opacity-5 blur-[100px] rounded-full mix-blend-screen"
    >
    </div>
  </div>

  <div class="mx-auto max-w-7xl w-full relative z-10">
    <div class="lg:w-full lg:max-w-2xl">
      <div class="px-4 py-12 sm:px-6 lg:px-8 lg:py-32 lg:pr-0">
        <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-2xl">
          <div
            class="inline-flex items-center rounded-full px-3 py-1 text-sm font-medium text-brand-gold-dim ring-1 ring-inset ring-brand-gold/30 bg-brand-gold/10 backdrop-blur-sm mb-6 dark:text-brand-gold dark:bg-brand-gold/5"
          >
            {tagline}
          </div>

          <h1
            class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl lg:text-6xl"
          >
            Produktive KI-Workflows statt <span
              class="text-transparent bg-clip-text bg-linear-to-r from-brand-blue to-indigo-400 whitespace-nowrap inline-block sm:inline"
            >
              Proof-of-Concepts.
            </span>
          </h1>

          <div class="mt-5 max-w-xl">
            <p
              class="text-lg leading-8 text-gray-600 dark:text-gray-300 inline"
            >
              {uspPrimary}
            </p>
            <InfoTooltip
              text="Die rechtliche Bewertung und Abnahme liegt bei Ihren Datenschutz- und Rechtsabteilungen."
            />
          </div>

          <div class="mt-10 flex flex-col gap-6 items-start">
            <div class="flex flex-col gap-2 w-full sm:w-auto">
              <a
                href="https://app.reclaim.ai/m/gartenai/meet"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center rounded-lg bg-brand-blue px-6 py-3.5 text-base font-semibold text-white shadow-lg shadow-brand-blue/20 transition hover:bg-blue-600 hover:shadow-brand-blue/40 hover:-translate-y-0.5 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-blue w-full sm:w-auto"
              >
                Sparring-Call buchen
              </a>
              <p class="text-sm text-gray-500 dark:text-gray-400 text-center">
                30 Minuten, kostenlos &amp; unverbindlich.
              </p>
            </div>
            <p class="text-base text-gray-600 dark:text-gray-300">
              Oder schreiben Sie mir eine kurze E-Mail an <a
                href={`mailto:${contact.email}`}
                class="font-semibold text-brand-blue hover:text-blue-600 dark:text-brand-gold dark:hover:text-brand-gold/80 transition-colors"
                >{contact.email}</a
              > – ich melde mich innerhalb von 24 Stunden.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div
    class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 lg:overflow-hidden lg:[clip-path:polygon(25%_0,100%_0,100%_100%,0%_100%)]"
  >
    <div
      class="absolute inset-0 bg-brand-dark/20 z-10 mix-blend-multiply pointer-events-none"
    >
    </div>

    <div
      class="absolute inset-0 bg-linear-to-t from-brand-dark via-transparent to-transparent z-20 pointer-events-none opacity-60"
    >
    </div>

    <Image
      src={heroImage}
      alt="Portraitfoto von Patrik Garten mit verschränkten Armen vor dunklem Hintergrund."
      class="aspect-3/2 object-cover object-top lg:aspect-auto lg:h-full lg:w-full opacity-90 mix-blend-luminosity hover:mix-blend-normal transition-all duration-1000 ease-out"
      widths={[400, 800, 1200, 1600]}
      format="avif"
      loading="eager"
    />
  </div>
</section>
