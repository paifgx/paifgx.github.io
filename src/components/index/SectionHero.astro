---
import { Image } from "astro:assets";
import heroImage from "../../assets/DSC00758.jpg";
import { contact } from "../../config/site";
import { AUTOMATION_SPARRING } from "../../data/offer";
---

<section
  id="hero"
  aria-label="Hauptbereich"
  class="relative overflow-hidden lg:flex lg:items-center lg:min-h-[calc(100vh-4rem)]"
>
  <div class="mx-auto max-w-7xl w-full relative z-10">
    <div class="lg:w-full lg:max-w-2xl xl:max-w-3xl">
      <div class="px-4 py-12 sm:px-6 lg:px-8 lg:py-32 lg:pr-0">
        <div
          class="mx-auto max-w-xl lg:mx-0 lg:max-w-none lg:bg-white/80 lg:dark:bg-brand-dark/80 lg:backdrop-blur-xl lg:rounded-3xl lg:p-8 lg:-ml-8 lg:shadow-xl lg:shadow-black/5 lg:ring-1 lg:ring-white/10"
        >
          <div
            class="inline-flex items-center rounded-full px-4 py-1.5 text-xs font-semibold tracking-wide uppercase text-brand-blue ring-1 ring-inset ring-brand-blue/30 bg-white/80 backdrop-blur-sm mb-8 dark:text-brand-gold dark:ring-brand-gold/30 dark:bg-brand-dark/50 shadow-sm"
          >
            Prozessautomatisierung für den Mittelstand
          </div>

          <h1
            class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white mb-4 leading-[1.1] sm:text-5xl lg:text-[3.5rem] xl:text-6xl"
          >
            <span
              class="text-transparent bg-clip-text bg-linear-to-r from-brand-blue to-brand-gold dark:from-blue-400 dark:to-brand-gold"
            >
              Expertenzeit<br />
            </span>
            statt Adminkram.
          </h1>

          <div class="mt-6">
            <p
              class="text-base leading-relaxed text-gray-600 dark:text-gray-300 font-normal"
            >
              Ich automatisiere Ihre Prozesse, damit Ihre besten Leute mehr
              Geschäft bewegen – statt Stunden in Datenübertragungen,
              Formularpflege und andere Verwaltungsroutine zu stecken.
            </p>
          </div>

          <div class="mt-8 flex flex-col gap-3 w-full sm:w-auto">
            <a
              href={contact.calendaring.general}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center w-full sm:w-auto rounded-full bg-brand-blue px-8 py-3.5 text-base font-bold text-white shadow-lg shadow-brand-blue/25 transition hover:bg-blue-600 hover:shadow-brand-blue/40 hover:-translate-y-0.5 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-blue"
            >
              {AUTOMATION_SPARRING.buttonLabel}
            </a>
            <p
              class="text-xs font-medium text-gray-500 dark:text-gray-400 px-1 text-center"
            >
              {AUTOMATION_SPARRING.shortClaim}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div
    class="relative h-[400px] w-full sm:h-[500px] lg:absolute lg:inset-y-0 lg:right-0 lg:h-full lg:w-1/2 lg:overflow-hidden lg:[clip-path:polygon(18%_0,100%_0,100%_100%,0%_100%)]"
  >
    <div
      class="absolute inset-0 bg-brand-dark/20 z-10 mix-blend-multiply pointer-events-none"
    >
    </div>

    <div
      class="absolute inset-0 bg-linear-to-t from-brand-dark via-transparent to-transparent z-20 pointer-events-none opacity-60"
    >
    </div>

    <Image
      src={heroImage}
      alt="Portraitfoto von Patrik Garten"
      class="h-full w-full object-cover object-[center_30%] lg:aspect-auto lg:h-full lg:w-full opacity-100 dark:opacity-90 mix-blend-normal transition-all duration-1000 ease-out filter saturate-[0.95] contrast-[1.05]"
      widths={[400, 800, 1200, 1600]}
      format="avif"
      loading="eager"
    />
  </div>
</section>
