---
import { clients } from "../../config/site";
---

<section
  id="partners"
  aria-label="AusgewÃ¤hlte Mandate & Auftraggeber"
  class="py-12 bg-white/5 backdrop-blur-xl transition-colors duration-200 dark:bg-brand-dark/20 sm:py-24 lg:py-32 relative"
>
  <div
    class="absolute top-0 left-0 w-full h-px bg-linear-to-r from-transparent via-brand-blue/20 to-transparent"
  >
  </div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2
        class="text-sm font-semibold uppercase tracking-widest text-brand-gold"
      >
        Vertrauen von Mittelstand & Enterprise
      </h2>
      <p
        class="mt-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-3xl lg:text-4xl"
      >
        Mandate, die Verantwortung verlangen
      </p>
    </div>

    <div class="mx-auto mt-16 max-w-2xl lg:max-w-none">
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {
          clients.map((client) => (
            <div class="group flex items-center justify-center rounded-xl bg-white px-8 py-6 text-center shadow-sm ring-1 ring-gray-900/5 transition-all duration-300 hover:shadow-lg hover:shadow-brand-blue/10 hover:ring-brand-blue/20 dark:bg-white/5 dark:ring-white/5 dark:hover:bg-white/10 dark:hover:ring-brand-blue/40">
              <span class="text-lg font-semibold text-gray-900 transition-colors duration-300 group-hover:text-brand-blue dark:text-gray-100 dark:group-hover:text-brand-blue">
                {client}
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
