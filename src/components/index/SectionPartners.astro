---
const clients = [
  "Universitätsklinikum Bonn",
  "FlowCraftDB",
  "CANCOM",
  "AICT Group",
  "DB Fernverkehr AG",
  "MeinPaul GmbH",
  "Nextise GmbH",
  "GFU Cyrus AG",
  "Bringmeister GmbH",
];
---

<section
  id="partners"
  aria-label="Ausgewählte Mandate & Auftraggeber"
  class="px-6 py-16 lg:px-0"
>
  <div class="mx-auto max-w-3xl text-center">
    <p class="text-xs font-semibold uppercase tracking-[0.3em] text-gray-400">
      Vertrauen von Mittelstand &amp; Enterprise
    </p>
    <h3 class="mt-3 text-2xl font-semibold text-gray-900">
      Mandate, die Verantwortung verlangen
    </h3>
    <p class="mt-3 text-sm text-gray-500">
      Auswahl der letzten Jahre – regulierte Branchen, E-Commerce, Bildung und
      Public Sector. Weniger Logos, mehr Substanz.
    </p>
  </div>

  <div class="mx-auto mt-10 max-w-4xl">
    <ul
      class="flex flex-wrap items-center justify-center gap-x-6 gap-y-3 text-sm font-semibold text-gray-700"
      role="list"
    >
      {clients.map((client) => (
        <li class="flex items-center gap-2">
          <span aria-hidden="true" class="text-gray-300">•</span>
          <span>{client}</span>
        </li>
      ))}
    </ul>
  </div>
</section>
