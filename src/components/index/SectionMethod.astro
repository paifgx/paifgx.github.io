---
import SectionSubtitle from "../ui/SectionSubtitle.astro";
import { processSteps } from "../../data/home";
---

<section
  class="relative bg-gray-50 px-4 py-16 dark:bg-brand-dark/30 sm:px-6 lg:px-8 lg:py-24 overflow-hidden"
>
  <div
    class="absolute inset-0 -z-10 bg-[radial-gradient(#2563eb_1px,transparent_1px)] bg-size-[32px_32px] opacity-[0.02] dark:opacity-[0.05]"
  >
  </div>

  <div class="mx-auto max-w-7xl relative z-10">
    <div class="mx-auto max-w-2xl text-center mb-16">
      <SectionSubtitle>Vorgehensweise</SectionSubtitle>
      <h2
        class="mt-2 text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
      >
        Struktur statt Chaos.
      </h2>
      <p class="mt-4 text-lg leading-8 text-gray-600 dark:text-gray-300">
        Mein Prozess sorgt dafür, dass wir schnell Ergebnisse sehen, ohne
        technische Schulden für die Zukunft aufzubauen.
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      {
        processSteps.map((step) => (
          <div class="group relative flex flex-col">
            <span class="text-6xl font-bold text-gray-200 dark:text-white/5 mb-4 group-hover:text-brand-blue/10 transition-colors duration-300">
              {step.id}
            </span>
            <h3 class="text-xl font-semibold leading-8 text-gray-900 dark:text-white relative z-10 -mt-8 ml-2 group-hover:text-brand-blue dark:group-hover:text-brand-gold transition-colors">
              {step.name}
            </h3>
            <p class="mt-4 text-base leading-7 text-gray-600 dark:text-gray-300">
              {step.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
