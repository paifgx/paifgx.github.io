---
import BaseLayout from "@layouts/BaseLayout.astro";
import { business, contact } from "../config/site";
import impressumSiegelLight from "../assets/impressum-siegel-light-horizontal-large.png";
import impressumSiegelDark from "../assets/impressum-siegel-dark-horizontal-large.png";
import SectionSubtitle from "../components/ui/SectionSubtitle.astro";
---

<BaseLayout
  title="Impressum"
  description={`Impressum von ${business.company}. Angaben gemäß § 5 DDG.`}
  noindex={true}
  backgroundGlow={true}
>
  <section class="relative overflow-hidden py-12 sm:py-16 lg:py-24">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="mb-16 clearfix">
        <div class="float-right ml-6 mb-6 w-48 lg:w-64">
          <img
            src={impressumSiegelLight.src}
            alt="eRecht24 Impressum Siegel"
            class="h-auto w-full dark:hidden"
          />
          <img
            src={impressumSiegelDark.src}
            alt="eRecht24 Impressum Siegel"
            class="hidden h-auto w-full dark:block"
          />
        </div>

        <SectionSubtitle>Angaben gemäß § 5 DDG</SectionSubtitle>
        <h1
          class="mt-6 text-4xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-5xl"
        >
          Impressum
        </h1>
        <p
          class="mt-6 text-lg leading-relaxed text-gray-600 dark:text-gray-300"
        >
          Die folgenden Informationen gelten für sämtliche digitalen und
          gedruckten Angebote, die unter der Bezeichnung garten.ai von Patrik
          Garten betrieben werden.
        </p>
      </div>

      <div class="border-t border-gray-100 dark:border-white/5 py-12">
        <div class="grid gap-12 grid-cols-1 sm:grid-cols-2">
          <div>
            <h3
              class="text-sm font-semibold uppercase tracking-widest text-brand-blue dark:text-brand-gold mb-4"
            >
              Betreiber
            </h3>
            <p class="text-lg font-bold text-gray-900 dark:text-white">
              {business.owner}
            </p>
            <div class="mt-2 text-base text-gray-600 dark:text-gray-300">
              <p>{business.company}</p>
              <p>{business.street}</p>
              <p>{business.postalCode} {business.city}</p>
            </div>
          </div>

          <div>
            <h3
              class="text-sm font-semibold uppercase tracking-widest text-brand-blue dark:text-brand-gold mb-4"
            >
              Kontakt
            </h3>
            <dl class="space-y-3 text-base text-gray-600 dark:text-gray-300">
              <div class="flex gap-4">
                <dt class="min-w-20 font-medium text-gray-900 dark:text-white">
                  Telefon:
                </dt>
                <dd>
                  <a
                    href={`tel:${contact.phoneHref}`}
                    class="hover:text-brand-blue dark:hover:text-brand-gold transition-colors"
                  >
                    {contact.phoneDisplay}
                  </a>
                </dd>
              </div>
              <div class="flex gap-4">
                <dt class="min-w-20 font-medium text-gray-900 dark:text-white">
                  E-Mail:
                </dt>
                <dd>
                  <a
                    href={`mailto:${contact.email}`}
                    class="hover:text-brand-blue dark:hover:text-brand-gold transition-colors"
                  >
                    {contact.email}
                  </a>
                </dd>
              </div>
            </dl>
          </div>
        </div>
      </div>

      <div class="border-t border-gray-100 dark:border-white/5 py-12">
        <div class="grid gap-12 md:grid-cols-2">
          <div class="space-y-4">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white">
              Umsatzsteuer-ID
            </h3>
            <div
              class="text-sm leading-relaxed text-gray-600 dark:text-gray-300"
            >
              <p class="mb-2">
                Umsatzsteuer-Identifikationsnummer gemäß § 27 a
                Umsatzsteuergesetz:
              </p>
              <p
                class="font-mono text-base font-semibold text-gray-900 dark:text-white"
              >
                {business.vatId}
              </p>
            </div>
          </div>

          <div class="space-y-4">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white">
              Berufs&shy;haftpflicht
            </h3>
            <div
              class="flex flex-col sm:flex-row gap-6 items-start justify-between"
            >
              <div class="space-y-4 text-sm text-gray-600 dark:text-gray-300">
                <div>
                  <p class="font-semibold text-gray-900 dark:text-white mb-1">
                    Versicherer
                  </p>
                  <p>{business.insurer.name}</p>
                  <p>{business.insurer.street}</p>
                  <p>{business.insurer.city}</p>
                </div>
                <div>
                  <p class="font-semibold text-gray-900 dark:text-white mb-1">
                    Geltungsraum
                  </p>
                  <p>{business.insurer.coverage}</p>
                </div>
              </div>

              <div class="pt-1 shrink-0">
                <a
                  rel="nofollow"
                  href="https://www.exali.de/siegel/gartenai"
                  target="_blank"
                  title="Mehr über die IT-Haftpflicht von Patrik Garten"
                  class="inline-block opacity-90 hover:opacity-100 transition-opacity"
                >
                  <img
                    src="https://www.exali.de/siegel/siegel_de-2_1128e4744e7684704d4827085acd08e7.png"
                    width="90"
                    height="90"
                    alt="Mehr über die IT-Haftpflicht von Patrik Garten"
                  />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="border-t border-gray-100 dark:border-white/5 pt-12">
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">
          Verbraucher&shy;streit&shy;beilegung /
          Universal&shy;schlichtungs&shy;stelle
        </h3>
        <p
          class="text-base leading-relaxed text-gray-600 dark:text-gray-300 max-w-2xl"
        >
          Ich bin nicht bereit oder verpflichtet, an Streitbeilegungsverfahren
          vor einer Verbraucherschlichtungsstelle teilzunehmen.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
