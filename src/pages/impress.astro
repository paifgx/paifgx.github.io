---
import BaseLayout from "@layouts/BaseLayout.astro";
import { business, contact } from "../config/site";
import impressumSiegelLight from "../assets/impressum-siegel-light-horizontal-large.png";
import impressumSiegelDark from "../assets/impressum-siegel-dark-horizontal-large.png";
---

<BaseLayout
  title="Impressum"
  description={`Impressum von ${business.company}. Angaben gemäß § 5 DDG.`}
  noindex={true}
>
  <section
    class="relative overflow-hidden py-12 sm:py-16 lg:py-24 border-b border-gray-100 dark:border-white/5"
  >
    <div class="pointer-events-none absolute inset-0 -z-10" aria-hidden="true">
      <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_top,rgba(37,99,235,0.15),transparent_55%)] dark:bg-[radial-gradient(circle_at_top,rgba(37,99,235,0.25),transparent_55%)]"
      >
      </div>
      <div
        class="absolute -bottom-32 right-0 h-64 w-64 rounded-full bg-brand-blue/10 blur-[120px] dark:bg-brand-blue/20"
      >
      </div>
    </div>

    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div
        class="flex flex-col items-center gap-8 text-center sm:flex-row sm:items-start sm:justify-between sm:text-left"
      >
        <div class="max-w-2xl">
          <div
            class="mb-4 inline-flex items-center gap-2 rounded-full border border-brand-gold/30 bg-brand-gold/10 px-3 py-1 text-sm font-medium text-brand-gold-dim backdrop-blur-sm dark:text-brand-gold dark:bg-brand-gold/5"
          >
            Angaben gemäß § 5 DDG
          </div>
          <h1
            class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl"
          >
            Impressum
          </h1>
          <p
            class="mt-6 text-lg leading-relaxed text-gray-600 dark:text-gray-300"
          >
            Die folgenden Informationen gelten für sämtliche digitalen und
            gedruckten Angebote, die unter der Bezeichnung GARTEN.ai von Patrik
            Garten betrieben werden.
          </p>
        </div>

        <div class="shrink-0">
          <div
            class="relative w-48 lg:w-64 transition-transform hover:scale-105"
          >
            <img
              src={impressumSiegelLight.src}
              alt="eRecht24 Impressum Siegel"
              class="h-auto w-full dark:hidden drop-shadow-sm"
            />
            <img
              src={impressumSiegelDark.src}
              alt="eRecht24 Impressum Siegel"
              class="hidden h-auto w-full dark:block drop-shadow-sm"
            />
          </div>
        </div>
      </div>

      <div
        class="mt-12 rounded-2xl border border-gray-200 bg-white p-8 shadow-lg shadow-brand-blue/5 dark:border-white/10 dark:bg-white/5 dark:text-gray-200 dark:shadow-none"
      >
        <p class="font-bold text-lg text-gray-900 dark:text-white mb-2">
          {business.owner}
        </p>
        <div class="space-y-1 text-gray-600 dark:text-gray-300">
          <p>{business.company}</p>
          <p>{business.street}</p>
          <p>{business.postalCode} {business.city}</p>
        </div>
      </div>
    </div>
  </section>

  <section
    class="bg-white px-4 py-12 dark:bg-brand-dark sm:px-6 lg:px-8 lg:py-16"
  >
    <div class="mx-auto grid max-w-5xl gap-6 md:grid-cols-3">
      <article
        class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg shadow-brand-blue/5 transition hover:shadow-xl hover:-translate-y-1 dark:border-white/10 dark:bg-white/5 dark:shadow-none"
      >
        <h2 class="text-lg font-bold text-gray-900 dark:text-white">Kontakt</h2>
        <dl class="mt-4 space-y-4 text-sm text-gray-600 dark:text-gray-300">
          <div>
            <dt class="font-semibold text-gray-900 dark:text-white mb-1">
              Telefon
            </dt>
            <dd>
              <a
                href={`tel:${contact.phoneHref}`}
                class="hover:text-brand-blue dark:hover:text-brand-gold transition-colors"
              >
                {contact.phoneDisplay}
              </a>
            </dd>
          </div>
          <div>
            <dt class="font-semibold text-gray-900 dark:text-white mb-1">
              E-Mail
            </dt>
            <dd>
              <a
                href={`mailto:${contact.email}`}
                class="hover:text-brand-blue dark:hover:text-brand-gold transition-colors"
              >
                {contact.email}
              </a>
            </dd>
          </div>
        </dl>
      </article>

      <article
        class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg shadow-brand-blue/5 transition hover:shadow-xl hover:-translate-y-1 dark:border-white/10 dark:bg-white/5 dark:shadow-none"
      >
        <h2 class="text-lg font-bold text-gray-900 dark:text-white">
          Umsatzsteuer-ID
        </h2>
        <p
          class="mt-4 text-sm leading-relaxed text-gray-600 dark:text-gray-300"
        >
          Umsatzsteuer-Identifikationsnummer gemäß § 27 a Umsatzsteuergesetz:
        </p>
        <p
          class="mt-2 text-base font-bold text-gray-900 dark:text-white font-mono"
        >
          {business.vatId}
        </p>
      </article>

      <article
        class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg shadow-brand-blue/5 transition hover:shadow-xl hover:-translate-y-1 dark:border-white/10 dark:bg-white/5 dark:shadow-none"
      >
        <h2 class="text-lg font-bold text-gray-900 dark:text-white">
          Berufs&shy;haftpflicht
        </h2>
        <div class="mt-4 space-y-4 text-sm text-gray-600 dark:text-gray-300">
          <div>
            <p class="font-semibold text-gray-900 dark:text-white mb-1">
              Versicherer
            </p>
            <p>{business.insurer.name}</p>
            <p>{business.insurer.street}</p>
            <p>{business.insurer.city}</p>
          </div>
          <div>
            <p class="font-semibold text-gray-900 dark:text-white mb-1">
              Geltungsraum
            </p>
            <p>{business.insurer.coverage}</p>
          </div>
        </div>
      </article>
    </div>

    <div class="mx-auto max-w-4xl mt-12">
      <article
        class="rounded-2xl border border-gray-200 bg-gray-50/50 p-8 dark:border-white/10 dark:bg-white/5"
      >
        <h2 class="text-xl font-bold text-gray-900 dark:text-white">
          Verbraucher&shy;streit&shy;beilegung /
          Universal&shy;schlichtungs&shy;stelle
        </h2>
        <p
          class="mt-4 text-base leading-relaxed text-gray-600 dark:text-gray-300"
        >
          Wir sind nicht bereit oder verpflichtet, an Streitbeilegungsverfahren
          vor einer Verbraucherschlichtungsstelle teilzunehmen.
        </p>
      </article>
    </div>
  </section>
</BaseLayout>
