---
import BaseLayout from "@layouts/BaseLayout.astro";

const business = {
  owner: "Patrik Garten",
  company: "Patrik Garten AI Development",
  street: "Phönixstraße 30",
  city: "44263 Dortmund",
  phoneDisplay: "+49 1516 4587494",
  phoneHref: "+4915164587494",
  email: "info@garten.ai",
  vatId: "DE351701080",
  insurer: {
    name: "exali AG",
    street: "Franz-Kobinger-Str. 9",
    city: "86157 Augsburg",
    coverage: "weltweit",
  },
  sourceUrl: "https://www.e-recht24.de",
};
---

<BaseLayout
  title="Impressum"
  description="Impressum von Patrik Garten AI Development. Angaben gemäß § 5 TMG."
>
  <section class="bg-white px-6 py-16 dark:bg-gray-950 lg:px-12">
    <div class="mx-auto max-w-3xl space-y-6">
      <div>
        <p
          class="text-sm font-semibold uppercase tracking-[0.3em] text-indigo-600 dark:text-indigo-200"
        >
          Angaben gemäß § 5 DDG
        </p>
        <h1 class="mt-3 text-4xl font-bold text-gray-900 dark:text-white">
          Impressum
        </h1>
        <p class="mt-4 text-base leading-7 text-gray-600 dark:text-gray-300">
          Die folgenden Informationen gelten für sämtliche digitalen und
          gedruckten Angebote, die unter der Marke GARTEN.ai von Patrik Garten
          betrieben werden.
        </p>
      </div>

      <div
        class="rounded-3xl border border-gray-200 bg-gray-50 p-6 text-base text-gray-700 shadow-xs dark:border-gray-800 dark:bg-gray-900/60 dark:text-gray-200"
      >
        <p class="font-semibold text-gray-900 dark:text-white">
          {business.owner}
        </p>
        <p>{business.company}</p>
        <p>{business.street}</p>
        <p>{business.city}</p>
      </div>
    </div>
  </section>

  <section class="bg-gray-50 px-6 py-16 dark:bg-gray-900 lg:px-12">
    <div class="mx-auto grid max-w-5xl gap-6 md:grid-cols-3">
      <article
        class="rounded-3xl border border-gray-200 bg-white p-8 shadow-xs dark:border-gray-700 dark:bg-gray-950/60"
      >
        <p
          class="text-xs font-semibold uppercase tracking-widest text-indigo-600"
        >
          Kontakt
        </p>
        <dl class="mt-6 space-y-4 text-sm text-gray-700 dark:text-gray-300">
          <div>
            <dt class="font-semibold text-gray-900 dark:text-white">Telefon</dt>
            <dd>
              <a
                href={`tel:${business.phoneHref}`}
                class="underline-offset-4 hover:underline"
              >
                {business.phoneDisplay}
              </a>
            </dd>
          </div>
          <div>
            <dt class="font-semibold text-gray-900 dark:text-white">E-Mail</dt>
            <dd>
              <a
                href={`mailto:${business.email}`}
                class="underline-offset-4 hover:underline"
              >
                {business.email}
              </a>
            </dd>
          </div>
        </dl>
      </article>

      <article
        class="rounded-3xl border border-gray-200 bg-white p-8 shadow-xs dark:border-gray-700 dark:bg-gray-950/60"
      >
        <p
          class="text-xs font-semibold uppercase tracking-widest text-indigo-600"
        >
          Umsatzsteuer-ID
        </p>
        <p class="mt-4 text-sm leading-6 text-gray-600 dark:text-gray-300">
          Umsatzsteuer-Identifikationsnummer gemäß § 27 a Umsatzsteuergesetz:
        </p>
        <p class="mt-2 text-base font-semibold text-gray-900 dark:text-white">
          {business.vatId}
        </p>
      </article>

      <article
        class="rounded-3xl border border-gray-200 bg-white p-8 shadow-xs dark:border-gray-700 dark:bg-gray-950/60"
      >
        <p
          class="text-xs font-semibold uppercase tracking-widest text-indigo-600"
        >
          Berufs&shy;haftpflicht&shy;versicherung
        </p>
        <div class="mt-6 space-y-4 text-sm text-gray-700 dark:text-gray-300">
          <div>
            <p class="font-semibold text-gray-900 dark:text-white">
              Name und Sitz des Versicherers
            </p>
            <p>{business.insurer.name}</p>
            <p>{business.insurer.street}</p>
            <p>{business.insurer.city}</p>
          </div>
          <div>
            <p class="font-semibold text-gray-900 dark:text-white">
              Geltungsraum der Versicherung
            </p>
            <p>{business.insurer.coverage}</p>
          </div>
        </div>
      </article>
    </div>
  </section>

  <section class="bg-white px-6 py-16 dark:bg-gray-950 lg:px-12">
    <div class="mx-auto max-w-4xl space-y-6">
      <article
        class="rounded-3xl border border-gray-200 bg-gray-50 p-6 shadow-xs dark:border-gray-800 dark:bg-gray-900/60"
      >
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
          Verbraucher&shy;streit&shy;beilegung /
          Universal&shy;schlichtungs&shy;stelle
        </h2>
        <p class="mt-4 text-sm leading-7 text-gray-600 dark:text-gray-300">
          Wir sind nicht bereit oder verpflichtet, an Streitbeilegungsverfahren
          vor einer Verbraucherschlichtungsstelle teilzunehmen.
        </p>
      </article>

      <p class="text-sm text-gray-500 dark:text-gray-400">
        Quelle:
        <a
          href={business.sourceUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-indigo-600 underline-offset-4 hover:underline dark:text-indigo-300"
        >
          eRecht24
        </a>
      </p>
    </div>
  </section>
</BaseLayout>
