---
import BaseLayout from "@layouts/BaseLayout.astro";
import TimeEntry from "@components/about/TimeEntry.astro";

const timeEntries = [
  {
    id: 1,
    date: "2017-10",
    title: "GARTEN gegründet – Freelance Marke",
    content:
      "Start als freiberuflicher AI Solution Architect & Software Engineer. Aufbau belastbarer Systeme für Auftraggeber wie DB Fernverkehr, Databay oder Bergfort – Fokus auf TYPO3, PHP und individuelle Plattformen.",
  },
  {
    id: 2,
    date: "2020-01",
    title: "Enterprise-Portale & TYPO3-Modernisierung",
    content:
      "Freelance-Mandate bei DMK E-BUSINESS und BOLD: Upgrades auf TYPO3 9 LTS, Microservices mit NestJS/Vue und Einführung moderner Delivery-Workflows.",
  },
  {
    id: 3,
    date: "2022-06",
    title: "Skalierbare Steuer- & E-Commerce-Plattformen",
    content:
      "Bringmeister & MeinPaul: PHP/Laravel-Backends, Kotlin-Migrationen, Flutter-Apps, AuthN/AuthZ, Performance-Tuning und DevOps-Automatisierung in AWS & Azure.",
  },
  {
    id: 4,
    date: "2023-12",
    title: "TÜV Rheinland zertifizierter AI Consultant",
    content:
      "Vertiefung meiner KI-Roadmaps (LLMs, Business Automation, ethische/ rechtliche Aspekte). Parallel: BSc Informatik (IU Internationale Hochschule, seit 09/2023, KI-Spezialisierung).",
  },
  {
    id: 5,
    date: "2024-06",
    title: "Co-Founder & CIO – AICT Group",
    content:
      "Architektur & Governance einer KI-Plattform zur Konfliktprävention mit LLMs und Knowledge Graphs. Verantwortung für Security/Privacy-by-Design, Microservices & Team-Enablement.",
  },
  {
    id: 6,
    date: "2024-12",
    title: "FlowCraftDB – Event-getriebene GenAI-Architektur",
    content:
      "E2E-Architektur für RAG- und Tool-Use-Workloads im E-Commerce. Stack: GPT-4, Gemini, LangChain, FastAPI, Docker, Kubernetes, AWS, Azure, MongoDB/Redis, Terraform, GitHub Actions.",
  },
  {
    id: 7,
    date: "2025-02",
    title: "Technical Lead Conversational AI – CANCOM",
    content:
      "Agentenbasierte Multi-LLM-Systeme, Flutter-App-Delivery, Security nach IT-Grundschutz/ISO 27001, CI/CD & QA-Governance. Technologien: React, TypeScript, Python, FastAPI, AWS, Azure, IAM.",
  },
  {
    id: 8,
    date: "2025-11",
    title: "AI Solution Architect – Universitätsklinikum Bonn",
    content:
      "Micronaut/Kotlin-Services, MSSQL-Integrationen und verantwortungsvolle GenAI-Anwendungen im Gesundheitswesen inklusive DSGVO-/DPIA-Begleitung.",
  },
];
---

<BaseLayout
  classDefintion="relative flex min-h-full flex-col xl:flex-row items-center relative min-h-screen"
>
  <div
    class="xl:sticky xl:top-0 bg-gray-900 flex-1 self-stretch flex justify-center items-center xl:max-h-screen xl:-mt-16 text-gray-300"
  >
    <div class="w-3/4 mx-auto flex flex-col gap-y-8 py-16">
      <h2 class="text-4xl font-bold text-white">Patriks Werdegang</h2>

      <div
        class="rounded-2xl border border-white/10 bg-white/5 px-5 py-6 text-sm leading-relaxed text-gray-200"
      >
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-indigo-200">
          Arbeitsweise
        </p>
        <h3 class="mt-2 text-2xl font-semibold text-white">
          Strukturen statt Tool-Hopping.
        </h3>
        <p class="mt-3">
          Seit 2017 begleite ich regulierte Unternehmen, Mittelstand und
          Akademien bei GenAI-, Data- und Software-Projekten. Ich arbeite eng mit
          Produkt-, Security- und Operations-Teams, damit Architekturen steuerbar
          bleiben – von der ersten Rechtsprüfung bis zum laufenden Betrieb.
        </p>
        <p class="mt-3 text-gray-300">
          &gt;150 Projekte · Remote-first · Einsätze vor Ort nach Absprache
        </p>
      </div>

      <div class="grid gap-4 text-sm xl:grid-cols-2">
        <div class="rounded-xl border border-white/10 bg-white/5 p-4">
          <p class="text-xs font-semibold uppercase tracking-wide text-indigo-200">
            Rollen
          </p>
          <p class="mt-2 text-white">
            AI Solution Architect &amp; Consultant · Software Engineer ·
            Fractional CIO · IT-Trainer &amp; Coach
          </p>
        </div>
        <div class="rounded-xl border border-white/10 bg-white/5 p-4">
          <p class="text-xs font-semibold uppercase tracking-wide text-indigo-200">
            Methodik
          </p>
          <p class="mt-2">
            RAG &amp; Agentensysteme · Security-by-Design · Observability ·
            Continuous Delivery · Governance &amp; Enablement
          </p>
        </div>
        <div class="rounded-xl border border-white/10 bg-white/5 p-4">
          <p class="text-xs font-semibold uppercase tracking-wide text-indigo-200">
            Aktuelle Schwerpunkte
          </p>
          <p class="mt-2">
            GenAI im Gesundheitswesen &amp; E-Commerce · Realtime Knowledge
            Graphs · Trainingsprogramme für moderne Softwarearchitektur
          </p>
        </div>
      </div>

      <div class="mt-6 text-sm text-gray-300">
        <p class="font-semibold text-white">Ausbildung &amp; Zertifikate</p>
        <p>BSc Informatik (IU Internationale Hochschule, seit 09/2023)</p>
        <p>TÜV Rheinland zertifizierter AI Consultant (03/2024)</p>
      </div>

      <a
        href="mailto:info@garten.ai?subject=CV%20anfragen"
        class="mt-4 inline-flex items-center justify-center rounded-md bg-white/10 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-white/20"
      >
        CV anfragen (PDF)
      </a>
    </div>
  </div>

  <div class="flex-1 flex flex-row">
    <div class="hidden xl:inline-flex w-3 bg-gray-900">
      <svg class="w-1.5 h-full" aria-hidden="true">
        <defs>
          <pattern id=":S4:" width="6" height="8" patternUnits="userSpaceOnUse">
            <path
              d="M0 0H6M0 8H6"
              class="stroke-gray-900/10 xl:stroke-white/10 dark:stroke-white/10"
              fill="none"></path>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#:S4:)"></rect>
      </svg>
    </div>

    <div class="flex-1">
      <div class="w-3/4 mx-auto py-8 flex flex-col gap-y-8">
        {timeEntries.map((entry) => <TimeEntry {...entry} />)}
      </div>
    </div>
  </div>
</BaseLayout>
