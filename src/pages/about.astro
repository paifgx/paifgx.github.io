---
import BaseLayout from "@layouts/BaseLayout.astro";
import TimeEntry from "@components/about/TimeEntry.astro";
import { stats, contact } from "../config/site";
import SectionSubtitle from "../components/ui/SectionSubtitle.astro";
import { timeEntries } from "../data/aboutTimeline";
import { pillars, principles, capabilities } from "../data/aboutMeta";
import { iconMap, type IconName } from "../utils/icons";
import PillLink from "@components/ui/PillLink.astro";
---

<BaseLayout
  classDefintion="relative flex min-h-screen flex-col bg-white text-gray-900 dark:bg-brand-dark dark:text-gray-100 xl:flex-row"
  title="Werdegang & Profil"
  description="Werdegang von Patrik Garten: AI Solution Architect für regulierte KMU, der Prozesse stabilisiert, Security & Compliance integriert und Teams befähigt, u. a. mit Middleware für personalisierte Medizin (Universitätsklinikum), KI-Assistenz für Teams und individuellen KI-Anwendungen für spezifische Use Cases."
>
  <section class="relative flex flex-1 flex-col xl:flex-row">
    <div
      class="relative flex flex-1 items-center justify-center overflow-hidden bg-white px-4 py-12 text-slate-900 sm:px-12 lg:py-16 dark:bg-brand-dark dark:text-gray-100 border-b xl:border-b-0 xl:border-r border-gray-100 dark:border-white/5"
    >
      <div
        class="pointer-events-none absolute inset-0 -z-10"
        aria-hidden="true"
      >
        <div
          class="absolute inset-0 bg-[radial-gradient(circle_at_top,rgba(37,99,235,0.15),transparent_55%)] dark:bg-[radial-gradient(circle_at_top,rgba(37,99,235,0.25),transparent_55%)]"
        >
        </div>
        <div
          class="absolute -bottom-32 right-0 h-64 w-64 rounded-full bg-brand-blue/10 blur-[120px] dark:bg-brand-blue/20"
        >
        </div>
      </div>

      <div class="relative mx-auto flex w-full max-w-2xl flex-col gap-10">
        <div class="space-y-6">
          <span
            class="inline-flex w-fit items-center gap-2 rounded-full border border-brand-gold/30 bg-brand-gold/10 px-3 py-1 text-sm font-medium text-brand-gold-dim backdrop-blur-md dark:text-brand-gold dark:bg-brand-gold/5"
          >
            AI Solution Architect
          </span>
          <div class="space-y-5">
            <h1
              class="text-4xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-5xl lg:text-7xl"
            >
              Patriks Werdegang
            </h1>
            <p class="text-lg leading-relaxed text-gray-600 dark:text-gray-300">
              Seit 2017 begleite ich regulierte Unternehmen, Mittelstand und
              Akademien bei KI-, ML-, Data- und Software-Projekten, von
              klassischen Modellen bis hin zu GenAI-Systemen. Meine Arbeit
              verbindet Produkt-, Security- und Operations-Teams, damit
              Architekturen steuerbar bleiben, von der ersten Bewertung bis zum
              laufenden Betrieb.
            </p>
          </div>
          <div
            class="flex flex-wrap gap-3 text-sm text-gray-500 dark:text-gray-300"
          >
            <PillLink
              href={contact.websites.main}
              label="Website"
              value="garten.ai"
              external={true}
            />
            <PillLink
              href={`mailto:${contact.email}`}
              label="Mail"
              value={contact.email}
            />
            <PillLink
              href={contact.linkedin.url}
              label="LinkedIn"
              value={contact.linkedin.handle}
              external={true}
            />
          </div>
        </div>

        <div
          class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg shadow-brand-blue/5 dark:border-white/10 dark:bg-white/5 dark:text-gray-300 dark:shadow-none"
        >
          <SectionSubtitle>Positionierung</SectionSubtitle>
          <p class="mt-3 text-lg font-medium text-gray-900 dark:text-white">
            Ich entwickle Systeme, wo andere Tools verkaufen. KI ist für mich
            kein Buzzword, sondern Verantwortung für Prozesse, Mitarbeiter und
            Compliance.
          </p>
          <p class="mt-4 text-gray-600 dark:text-gray-300 leading-relaxed">
            Als AI Solution Architect verbinde ich tiefes Engineering mit
            kaufmännischem Blick: Ich denke in Strukturen, Freigaben und
            Runbooks, nicht in kurzfristigen Demos. Jede Architektur muss von
            Operations, Security und Produkt gemeinsam getragen werden.
          </p>
          <p class="mt-4 text-gray-600 dark:text-gray-300 leading-relaxed">
            Mein Ziel: Unternehmen befähigen, KI nicht nur zu testen, sondern zu
            führen, mit klaren Entscheidungsgrundlagen, dokumentierten Risiken
            und Teams, die Verantwortung übernehmen können.
          </p>
          <p class="mt-4 text-gray-600 dark:text-gray-300 leading-relaxed">
            Je nach Projekt arbeite ich mit einem festen Netzwerk aus
            Spezialisten.
          </p>
        </div>

        <dl
          class="grid gap-6 rounded-2xl border border-gray-200 bg-white p-6 shadow-lg shadow-brand-blue/5 sm:grid-cols-3 dark:border-white/10 dark:bg-white/5 dark:shadow-none"
        >
          {
            stats.map((stat) => (
              <div class="space-y-1">
                <dt class="text-sm text-gray-600 dark:text-gray-400">
                  {stat.label}
                </dt>
                <dd class="text-2xl font-bold text-gray-900 dark:text-white">
                  {stat.value}
                </dd>
              </div>
            ))
          }
        </dl>

        <div
          class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg shadow-brand-blue/5 dark:border-white/10 dark:bg-white/5 dark:text-gray-200 dark:shadow-none"
        >
          <SectionSubtitle>Arbeitsweise</SectionSubtitle>
          <h3 class="mt-2 text-2xl font-bold text-gray-900 dark:text-white">
            Strukturen statt Tool-Hopping.
          </h3>
          <p class="mt-3 text-gray-600 dark:text-gray-300 leading-relaxed">
            Review-Workshops, Architektur-Slices und verbindliche Operating
            Models machen komplexe KI-Landschaften (ML &amp; GenAI) steuerbar.
            Ich begleite Teams hands-on, bis die Delivery in sicheren Bahnen
            läuft.
          </p>
          <p class="mt-4 text-sm text-gray-500 dark:text-gray-400 font-medium">
            &gt;150 Projekte · Remote-first · Einsätze vor Ort nach Absprache
          </p>
        </div>

        <div class="grid gap-4 sm:grid-cols-2">
          {
            pillars.map((pillar) => (
              <article class="rounded-2xl border border-gray-200 bg-white p-5 shadow-sm transition hover:shadow-md dark:border-white/10 dark:bg-white/5 dark:shadow-none">
                <p class="text-xs font-bold uppercase tracking-wide text-brand-gold">
                  {pillar.label}
                </p>
                <p class="mt-2 text-sm leading-relaxed text-gray-700 dark:text-gray-300">
                  {pillar.description}
                </p>
              </article>
            ))
          }
        </div>

        <div
          class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg shadow-brand-blue/5 dark:border-white/10 dark:bg-white/5 dark:shadow-none"
        >
          <div class="flex flex-col gap-2">
            <SectionSubtitle>Arbeitsprinzipien</SectionSubtitle>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white">
              Enablement & Governance als Leitplanken.
            </h3>
            <p class="text-base text-gray-600 dark:text-gray-300">
              Jede Zusammenarbeit endet mit dokumentierten
              Entscheidungsgrundlagen, Runbooks und Trainingspfaden.
            </p>
          </div>
          <ul class="mt-8 space-y-6">
            {
              principles.map((principle) => (
                <li class="flex gap-4">
                  <span class="mt-1 inline-flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-brand-blue/10 text-brand-blue dark:bg-brand-gold/10 dark:text-brand-gold">
                    <svg
                      class="h-3.5 w-3.5"
                      viewBox="0 0 16 16"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M4 8.5L6.5 11L12 5"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </svg>
                  </span>
                  <div class="space-y-1">
                    <p class="text-base font-bold text-gray-900 dark:text-white">
                      {principle.title}
                    </p>
                    <p class="text-sm leading-relaxed text-gray-600 dark:text-gray-400">
                      {principle.description}
                    </p>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>

        <div
          class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg shadow-brand-blue/5 dark:border-white/10 dark:bg-white/5 dark:text-gray-300 dark:shadow-none"
        >
          <SectionSubtitle>Fähigkeiten</SectionSubtitle>
          <h3 class="mt-2 text-2xl font-bold text-gray-900 dark:text-white">
            Stack & Methoden im Überblick.
          </h3>
          <p class="mt-3 text-gray-600 dark:text-gray-300">
            Kuratierte Toolchains für ML, Backend, DevOps und Security, direkt
            einsetzbar für regulierte Umgebungen.
          </p>
          <div class="mt-8 grid gap-y-12 gap-x-8 sm:grid-cols-2">
            {
              capabilities.map((capability) => {
                const Icon = iconMap[capability.icon as IconName];
                return (
                  <article class="flex flex-col gap-3">
                    <div class="flex items-center gap-3 border-b border-gray-100 dark:border-white/10 pb-3">
                      <span class="text-brand-blue dark:text-brand-gold">
                        {Icon && <Icon class="h-5 w-5" />}
                      </span>
                      <h4 class="text-base font-bold text-gray-900 dark:text-white">
                        {capability.title}
                      </h4>
                    </div>
                    <p class="text-sm leading-relaxed text-gray-600 dark:text-gray-400">
                      {capability.description}
                    </p>
                  </article>
                );
              })
            }
          </div>
        </div>
      </div>
    </div>

    <div
      class="flex flex-1 flex-col bg-white px-4 py-12 dark:bg-brand-dark sm:px-12"
    >
      <div class="mx-auto flex w-full max-w-3xl flex-col">
        <div class="border-b border-gray-100 pb-8 dark:border-white/10">
          <p
            class="text-xs font-semibold uppercase tracking-[0.4em] text-brand-gold"
          >
            Timeline
          </p>
          <h2
            class="mt-3 text-2xl font-bold text-gray-900 dark:text-white sm:text-3xl"
          >
            Stationen mit messbarer Wirkung.
          </h2>
          <p
            class="mt-2 text-sm leading-relaxed text-gray-600 dark:text-gray-300"
          >
            Von Plattform-Modernisierungen bis zu GenAI-Governance: Jede Station
            baut auf der vorherigen auf und erweitert das Playbook für
            regulierte Organisationen.
          </p>
        </div>

        <div class="mt-10 space-y-10">
          {
            timeEntries.map((entry, index) => (
              <TimeEntry {...entry} isLast={index === timeEntries.length - 1} />
            ))
          }
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
