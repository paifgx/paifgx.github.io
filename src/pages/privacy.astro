<BaseLayout
  title="Datenschutzerklärung"
  description={`Informationen zur Verarbeitung personenbezogener Daten gemäß DSGVO bei ${business.company}.`}
  noindex={true}
>
  <section class="bg-white px-6 py-16 dark:bg-gray-950 lg:px-12">
    <div class="mx-auto max-w-4xl space-y-5">
      <p
        class="text-sm font-semibold uppercase tracking-[0.3em] text-indigo-600 dark:text-indigo-200"
      >
        Rechtliche Hinweise
      </p>
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white">
        Datenschutz&shy;erkl&auml;rung
