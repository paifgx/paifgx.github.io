---
import BaseLayout from "../layouts/BaseLayout.astro";
import { serviceStats, contact, uspPrimary } from "../config/site";
import SectionSubtitle from "../components/ui/SectionSubtitle.astro";
import ServiceAudience from "../components/service/ServiceAudience.astro";
import {
  servicePillars,
  engagementModes,
  technologyHighlights,
  painPoints,
} from "../data/service";
import FinalCTA from "../components/ui/FinalCTA.astro";
import { iconMap, type IconName } from "../utils/icons";

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "Für wen sind die Dienstleistungen von garten.ai geeignet?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Die Leistungen richten sich an mittelständische Unternehmen (KMU) mit klaren Kernprozessen, die unter Medienbrüchen, Tool-Wildwuchs oder Abhängigkeiten von Schlüsselpersonen leiden. Typische Branchen: E-Commerce/Retail, Gesundheitswesen, IT-Dienstleister und wissensintensive Organisationen. Geschäftsführung und IT-Leitung, die digitale Transformation mit klarem Business Case und Governance-Rahmen angehen wollen.",
      },
    },
    {
      "@type": "Question",
      name: "Welche Leistungsbausteine bietet garten.ai?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Drei kombinierbare Bausteine: 1) Architektur & Workflow-Design (Assessment, Blueprint, Governance-Plan), 2) Assistenzsysteme & Automatisierung (RAG-Assistenten, Agenten-Workflows, Integration in bestehende Systeme), 3) Enablement & Sparring (Reviews, Trainings, Coaching für nachhaltigen Betrieb). Alle Bausteine orientieren sich an Security-by-Design nach BSI IT-Grundschutz und ISO/IEC 27001.",
      },
    },
    {
      "@type": "Question",
      name: "Wie läuft ein typisches Projekt ab?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Ein Projekt durchläuft vier Phasen: 1) Analyse & Business Case (Tiefen-Analyse, Quick-Wins, Decision-Memo), 2) Architektur & MVP (tragfähige Architektur, funktionsfähiger MVP für echte Nutzer), 3) Umsetzung & Integration (iterativer Ausbau, Integration, Monitoring), 4) Übergabe & Enablement (Dokumentation, Onboarding, Schulung). Ziel: Sie können Systeme eigenständig betreiben und weiterentwickeln.",
      },
    },
    {
      "@type": "Question",
      name: "Wie wird Governance, Security und Compliance berücksichtigt?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Security, Datenschutz und Governance sind Bestandteil jedes Meilensteins, nicht nachträglich drübergestülpt. Orientierung an BSI IT-Grundschutz und ISO/IEC 27001. Dokumentierte Guardrails, Risiko-Mapping, IAM/RBAC-Konzepte und Vorbereitung auf Audits. Kein Blackbox-Ansatz – Code, Architekturwissen und Betriebskompetenz bleiben beim Kunden.",
      },
    },
    {
      "@type": "Question",
      name: "Wie schnell kann ein Projekt starten und wie läuft der erste Kontakt ab?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Die Reaktionszeit auf Anfragen beträgt 24 Stunden. Nach einem initialen Gespräch (z. B. Automatisierungs-Potenzial-Check oder Digitalisierungs-Sparring) wird gemeinsam der optimale Startpunkt und Scope definiert. Time-to-Value für MVP liegt bei unter 90 Tagen. Alle Modelle sind kombinierbar und remote im DACH-Raum oder vor Ort verfügbar.",
      },
    },
  ],
};
---

<BaseLayout
  classDefintion="bg-white text-gray-900 dark:bg-brand-dark dark:text-gray-100"
  title="Dienstleistungen & Serviceportfolio"
  description="Digitale Architektur & Automatisierung für den Mittelstand: Workflow-Design, Assistenzsysteme und Enablement. Security-by-Design nach BSI IT-Grundschutz & ISO 27001."
>
  <section class="relative overflow-hidden px-4 py-12 sm:px-12 lg:py-24">
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full z-0 pointer-events-none overflow-hidden"
    >
      <div
        class="absolute top-[-10%] left-[-10%] w-[50vw] h-[50vw] bg-brand-blue opacity-10 blur-[120px] rounded-full mix-blend-screen"
      >
      </div>
      <div
        class="absolute bottom-[-10%] right-[-10%] w-[40vw] h-[40vw] bg-brand-blue opacity-5 blur-[100px] rounded-full mix-blend-screen"
      >
      </div>
    </div>
    <div class="relative mx-auto flex w-full max-w-6xl flex-col gap-10 z-10">
      <div class="space-y-5">
        <span
          class="inline-flex w-fit items-center gap-2 rounded-full border border-brand-gold/30 bg-brand-gold/10 px-3 py-1 text-sm font-medium text-brand-gold-dim backdrop-blur-md dark:text-brand-gold dark:bg-brand-gold/5"
        >
          Serviceportfolio
        </span>
        <div class="space-y-5">
          <h1
            class="text-4xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-5xl lg:text-7xl"
          >
            KI-Architektur &amp; Delivery, die <br class="hidden lg:block" />
            <span
              class="text-transparent bg-clip-text bg-linear-to-r from-brand-blue via-indigo-500 to-brand-gold dark:from-blue-400 dark:via-indigo-300 dark:to-brand-gold"
              >Ihren Betrieb entlastet.</span
            >
          </h1>
          <p
            class="text-lg leading-8 text-gray-600 dark:text-gray-300 max-w-3xl"
          >
            Für mittelständische Unternehmen, die unter Medienbrüchen,
            Tool-Wildwuchs und Abhängigkeiten von Schlüsselpersonen leiden. Ich
            baue digitale Systeme und Automatisierungen, die Ihre Kernprozesse
            entlasten – mit klarem Business Case und Governance-Rahmen.
          </p>
          <p
            class="text-lg leading-8 text-gray-600 dark:text-gray-300 max-w-3xl"
          >
            {uspPrimary}
          </p>
        </div>
      </div>

      <div class="mb-12 grid gap-6 md:grid-cols-3">
        {
          painPoints.map((pain) => {
            const Icon = iconMap[pain.icon as IconName];
            return (
              <article class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg shadow-brand-blue/5 transition hover:shadow-xl hover:-translate-y-1 dark:border-white/10 dark:bg-white/5 dark:shadow-none">
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-brand-blue/10 text-brand-blue dark:bg-brand-gold/10 dark:text-brand-gold mb-4">
                  {Icon && <Icon class="h-6 w-6" />}
                </div>
                <h4 class="text-base font-bold text-gray-900 dark:text-white">
                  {pain.title}
                </h4>
                <p class="mt-2 text-sm leading-relaxed text-gray-600 dark:text-gray-400">
                  {pain.description}
                </p>
              </article>
            );
          })
        }
      </div>

      <dl
        class="grid gap-8 rounded-[2.5rem] border border-gray-200 bg-white p-8 text-sm shadow-lg shadow-brand-blue/5 sm:grid-cols-3 dark:border-white/10 dark:bg-white/5 dark:text-gray-200 dark:shadow-none"
      >
        {
          serviceStats.map((stat, index) => {
            const dividerClass =
              index === 0
                ? ""
                : "sm:border-l sm:pl-8 border-gray-200 dark:border-white/10";

            return (
              <div class={`space-y-2 text-left ${dividerClass}`}>
                <dt class="text-sm leading-6 text-gray-600 dark:text-gray-400">
                  {stat.label}
                </dt>
                <dd class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white">
                  {stat.value}
                </dd>
              </div>
            );
          })
        }
      </dl>
    </div>
  </section>

  <ServiceAudience />

  <section class="bg-white dark:bg-brand-dark">
    {
      servicePillars.map((pillar, index) => {
        const isReversed = index % 2 === 1;
        return (
          <article
            class="container mx-auto px-4 py-12 sm:px-6 lg:px-8 lg:py-24 border-b border-gray-100 last:border-0 dark:border-white/5"
            role="region"
            aria-labelledby={pillar.title.toLowerCase().replace(/\s+/g, "-")}
          >
            <div
              class={`relative isolate flex flex-col gap-12 lg:flex-row ${isReversed ? "lg:flex-row-reverse" : ""}`}
            >
              <div
                aria-hidden="true"
                class="pointer-events-none absolute inset-0 opacity-50 dark:opacity-20"
              >
                <div class="absolute -left-16 top-0 h-48 w-48 rounded-full bg-brand-blue/10 blur-3xl" />
                <div class="absolute -right-10 bottom-0 h-64 w-64 rounded-full bg-brand-gold/10 blur-3xl" />
              </div>

              <div class="relative z-10 flex-1 space-y-6 sm:space-y-8 text-gray-900 dark:text-gray-100">
                <p class="inline-flex items-center gap-3 text-sm font-bold uppercase tracking-widest text-brand-blue dark:text-brand-gold">
                  <span class="h-px w-8 bg-brand-blue/40 dark:bg-brand-gold/40" />
                  {pillar.subtitle}
                </p>

                <h2
                  id={pillar.title.toLowerCase().replace(/\s+/g, "-")}
                  class="text-2xl sm:text-3xl font-bold leading-tight text-gray-900 dark:text-white lg:text-4xl"
                >
                  {pillar.title}
                </h2>

                <p class="text-base sm:text-lg leading-relaxed text-gray-600 dark:text-gray-300 max-w-3xl">
                  {pillar.description}
                </p>

                <div class="grid gap-4 sm:grid-cols-3 sm:gap-6">
                  {pillar.cards.map((card) => (
                    <div class="rounded-xl border border-gray-100 bg-white/50 p-4 dark:border-white/5 dark:bg-white/5 sm:p-5">
                      <h3 class="text-base font-bold text-gray-900 dark:text-white">
                        {card.title}
                      </h3>
                      <p class="mt-2 text-sm leading-relaxed text-gray-600 dark:text-gray-400">
                        {card.description}
                      </p>
                    </div>
                  ))}
                </div>
              </div>

              <div class="relative z-10 hidden flex-1 items-center justify-center lg:flex lg:max-w-md">
                <div class="relative w-full max-w-xl group">
                  <div class="absolute inset-0 rounded-[3rem] bg-linear-to-br from-brand-blue/20 to-transparent blur-2xl dark:from-brand-blue/10" />
                  <svg
                    viewBox="0 0 655 680"
                    fill="none"
                    class="relative z-10 w-full"
                  >
                    <g
                      clip-path={`url(#${pillar.title.toLowerCase().replace(/\s+/g, "-")}-clip)`}
                      class="origin-center rotate-3 transition-all duration-700 ease-out group-hover:rotate-0"
                    >
                      <g class="origin-center scale-100 transition-all duration-700 ease-out group-hover:scale-105">
                        <foreignObject class="h-full w-full">
                          <img
                            src={pillar.image}
                            alt={pillar.title}
                            loading="lazy"
                            decoding="async"
                            class="h-full w-full rounded-[3rem] bg-neutral-100 object-cover dark:bg-gray-800"
                          />
                        </foreignObject>
                      </g>
                      <use
                        href={`#${pillar.title.toLowerCase().replace(/\s+/g, "-")}-shape`}
                        stroke-width="2"
                        class="stroke-black/10 dark:stroke-white/15"
                      />
                    </g>
                    <defs>
                      <clipPath
                        id={`${pillar.title.toLowerCase().replace(/\s+/g, "-")}-clip`}
                      >
                        <path
                          id={`${pillar.title.toLowerCase().replace(/\s+/g, "-")}-shape`}
                          d="M537.827 9.245A11.5 11.5 0 0 1 549.104 0h63.366c7.257 0 12.7 6.64 11.277 13.755l-25.6 128A11.5 11.5 0 0 1 586.87 151h-28.275a15.999 15.999 0 0 0-15.689 12.862l-59.4 297c-1.98 9.901 5.592 19.138 15.689 19.138h17.275l.127.001c.85.009 1.701.074 2.549.009 11.329-.874 21.411-7.529 24.88-25.981.002-.012.016-.016.023-.007.008.009.022.005.024-.006l24.754-123.771A11.5 11.5 0 0 1 580.104 321h63.366c7.257 0 12.7 6.639 11.277 13.755l-25.6 128A11.5 11.5 0 0 1 617.87 472H559c-22.866 0-28.984 7.98-31.989 25.931-.004.026-.037.035-.052.014-.015-.02-.048-.013-.053.012l-24.759 123.798A11.5 11.5 0 0 1 490.87 631h-29.132a14.953 14.953 0 0 0-14.664 12.021c-4.3 21.502-23.18 36.979-45.107 36.979H83.502c-29.028 0-50.8-26.557-45.107-55.021l102.4-512C145.096 91.477 163.975 76 185.902 76h318.465c10.136 0 21.179-5.35 23.167-15.288l10.293-51.467Zm-512 160A11.5 11.5 0 0 1 37.104 160h63.366c7.257 0 12.7 6.639 11.277 13.755l-25.6 128A11.5 11.5 0 0 1 74.87 311H11.504c-7.257 0-12.7-6.639-11.277-13.755l25.6-128Z"
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                        />
                      </clipPath>
                    </defs>
                  </svg>
                </div>
              </div>
            </div>
          </article>
        );
      })
    }
  </section>

  <section
    class="bg-white px-4 py-12 dark:bg-brand-dark sm:px-12 lg:py-24 border-t border-gray-100 dark:border-white/5"
  >
    <div class="mx-auto max-w-6xl">
      <div class="space-y-4 text-center max-w-2xl mx-auto">
        <SectionSubtitle>Projektablauf</SectionSubtitle>
        <h2
          class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
        >
          Von der Analyse bis zur Übergabe.
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Ein strukturierter Prozess, der Risiken minimiert und sicherstellt,
          dass Sie am Ende ein System haben, das Ihr Team eigenständig betreibt.
        </p>
      </div>
      <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-4">
        <div class="space-y-3">
          <div
            class="flex h-12 w-12 items-center justify-center rounded-lg bg-brand-blue/10 text-brand-blue dark:bg-brand-gold/10 dark:text-brand-gold text-2xl font-bold"
          >
            1
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white">
            Analyse & Business Case
          </h3>
          <p class="text-sm leading-relaxed text-gray-600 dark:text-gray-400">
            Tiefen-Analyse von Prozessen, Systemen und Stakeholdern.
            Identifikation von Quick-Wins und strategischen Hebeln. Kompaktes
            Decision-Memo mit Szenarien, ROI-Einschätzung und klarer Empfehlung.
          </p>
        </div>
        <div class="space-y-3">
          <div
            class="flex h-12 w-12 items-center justify-center rounded-lg bg-brand-blue/10 text-brand-blue dark:bg-brand-gold/10 dark:text-brand-gold text-2xl font-bold"
          >
            2
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white">
            Architektur & MVP
          </h3>
          <p class="text-sm leading-relaxed text-gray-600 dark:text-gray-400">
            Ausarbeitung einer tragfähigen Architektur mit Security- und
            Governance-Konzept. Umsetzung eines funktionsfähigen MVP, den echte
            Nutzer im Alltag ausprobieren – keine reine Demo.
          </p>
        </div>
        <div class="space-y-3">
          <div
            class="flex h-12 w-12 items-center justify-center rounded-lg bg-brand-blue/10 text-brand-blue dark:bg-brand-gold/10 dark:text-brand-gold text-2xl font-bold"
          >
            3
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white">
            Umsetzung & Integration
          </h3>
          <p class="text-sm leading-relaxed text-gray-600 dark:text-gray-400">
            Iterativer Ausbau des MVP in eine produktive Lösung. Integration in
            bestehende Systemlandschaft. Aufbau von Monitoring, Logging,
            Alerting und Rollen- und Rechtekonzepten.
          </p>
        </div>
        <div class="space-y-3">
          <div
            class="flex h-12 w-12 items-center justify-center rounded-lg bg-brand-blue/10 text-brand-blue dark:bg-brand-gold/10 dark:text-brand-gold text-2xl font-bold"
          >
            4
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white">
            Übergabe & Enablement
          </h3>
          <p class="text-sm leading-relaxed text-gray-600 dark:text-gray-400">
            Saubere Dokumentation (Architektur, APIs, Runbooks,
            Betriebskonzepte). Onboarding und Schulung interner Teams. Ziel: Sie
            können Systeme eigenständig betreiben und weiterentwickeln.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section
    class="bg-white px-4 py-12 dark:bg-brand-dark sm:px-12 lg:py-24 border-t border-gray-100 dark:border-white/5"
  >
    <div class="mx-auto max-w-6xl">
      <div class="space-y-4 text-center max-w-2xl mx-auto">
        <SectionSubtitle>Arbeitsprinzipien</SectionSubtitle>
        <h2
          class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
        >
          Wie ich arbeite – und wie nicht.
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Klare Prinzipien für nachhaltige Systeme und ehrliche Zusammenarbeit.
        </p>
      </div>
      <div class="mt-12 grid gap-6 md:grid-cols-2">
        <div
          class="rounded-2xl border border-green-200 bg-green-50 p-6 dark:border-green-800 dark:bg-green-900/20"
        >
          <h3
            class="text-lg font-semibold text-green-800 dark:text-green-400 mb-4"
          >
            So arbeite ich
          </h3>
          <ul class="space-y-3 text-sm text-green-700 dark:text-green-300">
            <li class="flex gap-x-3">
              <svg
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
                class="h-5 w-5 flex-none text-green-600 dark:text-green-400 mt-0.5"
              >
                <path
                  d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z"
                  clip-rule="evenodd"
                  fill-rule="evenodd"></path>
              </svg>
              <span
                ><strong>Problem vor Technologie:</strong> Startpunkt ist immer der
                konkrete Prozess und Business-Case, nicht der Wunsch nach KI.</span
              >
            </li>
            <li class="flex gap-x-3">
              <svg
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
                class="h-5 w-5 flex-none text-green-600 dark:text-green-400 mt-0.5"
              >
                <path
                  d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z"
                  clip-rule="evenodd"
                  fill-rule="evenodd"></path>
              </svg>
              <span
                ><strong>System statt Tool:</strong> Fokus auf End-to-End-Systeme,
                die einen Kernprozess zuverlässig tragen.</span
              >
            </li>
            <li class="flex gap-x-3">
              <svg
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
                class="h-5 w-5 flex-none text-green-600 dark:text-green-400 mt-0.5"
              >
                <path
                  d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z"
                  clip-rule="evenodd"
                  fill-rule="evenodd"></path>
              </svg>
              <span
                ><strong>Governance & Security-by-Design:</strong> Sicherheit, Datenschutz
                und Governance von Anfang an mitgedacht (BSI IT-Grundschutz, ISO/IEC
                27001).</span
              >
            </li>
            <li class="flex gap-x-3">
              <svg
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
                class="h-5 w-5 flex-none text-green-600 dark:text-green-400 mt-0.5"
              >
                <path
                  d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z"
                  clip-rule="evenodd"
                  fill-rule="evenodd"></path>
              </svg>
              <span
                ><strong>Hands-on im Code:</strong> Architektur-Reviews, Security-Checks
                und Delivery – nicht nur Consulting-Decks.</span
              >
            </li>
            <li class="flex gap-x-3">
              <svg
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
                class="h-5 w-5 flex-none text-green-600 dark:text-green-400 mt-0.5"
              >
                <path
                  d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z"
                  clip-rule="evenodd"
                  fill-rule="evenodd"></path>
              </svg>
              <span
                ><strong>Enablement & Ownership:</strong> Code, Architekturwissen
                und Betriebskompetenz bleiben bei Ihnen.</span
              >
            </li>
          </ul>
        </div>
        <div
          class="rounded-2xl border border-red-200 bg-red-50 p-6 dark:border-red-800 dark:bg-red-900/20"
        >
          <h3 class="text-lg font-semibold text-red-800 dark:text-red-400 mb-4">
            So arbeite ich nicht
          </h3>
          <ul class="space-y-3 text-sm text-red-700 dark:text-red-300">
            <li class="flex gap-x-3">
              <svg
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
                class="h-5 w-5 flex-none text-red-600 dark:text-red-400 mt-0.5"
              >
                <path
                  d="M6.28 5.22a.75.75 0 0 0-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 1 0 1.06 1.06L10 11.06l3.72 3.72a.75.75 0 1 0 1.06-1.06L11.06 10l3.72-3.72a.75.75 0 0 0-1.06-1.06L10 8.94 6.28 5.22Z"
                ></path>
              </svg>
              <span>PoC-Spielzeug ohne Produktivierung oder Skalierung.</span>
            </li>
            <li class="flex gap-x-3">
              <svg
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
                class="h-5 w-5 flex-none text-red-600 dark:text-red-400 mt-0.5"
