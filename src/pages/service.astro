---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import programmingImage from "../assets/programming.jpg";
import { serviceStats, contact } from "../config/site";
import PillLink from "../components/ui/PillLink.astro";
import SectionSubtitle from "../components/ui/SectionSubtitle.astro";
import ServiceArticle from "../components/ServiceArticle.astro";
import {
  servicePillars,
  engagementModes,
  technologyHighlights,
  painPoints,
} from "../data/service";
import FinalCTA from "../components/ui/FinalCTA.astro";
import {
  SquaresPlusIcon,
  UserGroupIcon,
  ShieldExclamationIcon,
} from "@heroicons/vue/24/outline";

const iconMap = {
  SquaresPlusIcon,
  UserGroupIcon,
  ShieldExclamationIcon,
};

// Enables FAQ rich snippets in search results to improve visibility
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "Welche KI-Dienstleistungen bietet Patrik Garten an?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Patrik Garten bietet AI Solution Architecture, RAG- & Agentensysteme mit LangChain/LlamaIndex, Platform Engineering (FastAPI, NestJS, Cloud-Infrastruktur), sowie Team Enablement durch Trainings und Coaching. Alle Leistungen orientieren sich an Security-by-Design nach BSI IT-Grundschutz und ISO 27001.",
      },
    },
    {
      "@type": "Question",
      name: "Wie läuft eine Zusammenarbeit ab?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Jede Zusammenarbeit startet mit einem Assessment von Prozessen, Datenquellen und Sicherheitsanforderungen. Daraus entsteht eine priorisierte Roadmap mit Verantwortlichkeiten und KPIs. Die Umsetzung erfolgt hands-on mit Reviews, Architecture Boards und Enablement-Artefakten.",
      },
    },
    {
      "@type": "Question",
      name: "Welche Engagement-Modelle gibt es?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Es gibt drei Modelle: Fractional AI/CIO für strategische Verantwortung, Projekt-Delivery für End-to-end Umsetzung, und Advisory & Enablement für Sparring und Coaching. Alle Modelle sind kombinierbar und remote im DACH-Raum oder vor Ort verfügbar.",
      },
    },
    {
      "@type": "Question",
      name: "Welche Technologien werden eingesetzt?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Der Tech-Stack umfasst LLMs (OpenAI, Azure OpenAI, Claude, Gemini, Mistral), Orchestrierung (LangChain, LlamaIndex, Haystack), Backend (FastAPI, NestJS, Django), Cloud (AWS, Azure, GCP, Kubernetes), und Security (OAuth2, Keycloak, BSI IT-Grundschutz).",
      },
    },
    {
      "@type": "Question",
      name: "Wie schnell kann ein Projekt starten?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Die Reaktionszeit auf Anfragen beträgt 24 Stunden. Time-to-Value für MVP/POC liegt bei unter 90 Tagen. Nach einem initialen Gespräch wird gemeinsam der optimale Startpunkt und Scope definiert.",
      },
    },
  ],
};
---

<BaseLayout
  classDefintion="bg-white text-gray-900 dark:bg-brand-dark dark:text-gray-100"
  title="Dienstleistungen & Serviceportfolio"
  description="Outcome-basierte AI Delivery: RAG & Agentensysteme, Platform Engineering und Enablement für Teams. Security-by-Design orientiert an BSI IT-Grundschutz & ISO 27001."
>
  <section class="relative overflow-hidden px-4 py-12 sm:px-12 lg:py-24">
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full z-0 pointer-events-none overflow-hidden"
    >
      <div
        class="absolute top-[-10%] left-[-10%] w-[50vw] h-[50vw] bg-brand-blue opacity-10 blur-[120px] rounded-full mix-blend-screen"
      >
      </div>
      <div
        class="absolute bottom-[-10%] right-[-10%] w-[40vw] h-[40vw] bg-brand-blue opacity-5 blur-[100px] rounded-full mix-blend-screen"
      >
      </div>
    </div>
    <div class="relative mx-auto flex w-full max-w-6xl flex-col gap-10 z-10">
      <div class="space-y-5">
        <span
          class="inline-flex w-fit items-center gap-2 rounded-full border border-brand-gold/30 bg-brand-gold/10 px-3 py-1 text-sm font-medium text-brand-gold-dim backdrop-blur-sm dark:text-brand-gold dark:bg-brand-gold/5"
        >
          Serviceportfolio
        </span>
        <div class="space-y-5">
          <h1
            class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl lg:text-6xl"
          >
            KI-Architektur &amp; Delivery, die <br class="hidden lg:block" />
            <span
              class="text-transparent bg-clip-text bg-linear-to-r from-brand-blue to-indigo-400"
              >Ihren Betrieb entlastet.</span
            >
          </h1>
          <p
            class="text-lg leading-8 text-gray-600 dark:text-gray-300 max-w-3xl"
          >
            Jede Zusammenarbeit startet mit klaren Outcomes: Sicherheit,
            Skalierbarkeit und Ownership in Ihrem Team. Leistungsbausteine
            lassen sich kombinieren – remote im DACH-Raum oder vor Ort.
          </p>
        </div>
      </div>
      <div
        class="flex flex-wrap gap-3 text-sm text-gray-500 dark:text-gray-300"
      >
        <PillLink
          href={contact.websites.main}
          label="Website"
          value="garten.ai"
          external={true}
        />
        <PillLink
          href={`mailto:${contact.email}`}
          label="Mail"
          value={contact.email}
        />
        <PillLink
          href={contact.linkedin.url}
          label="LinkedIn"
          value={contact.linkedin.handle}
          external={true}
        />
      </div>

      <div class="mb-12 grid gap-6 md:grid-cols-3">
        {
          painPoints.map((pain) => {
            const Icon = iconMap[pain.icon as keyof typeof iconMap];
            return (
              <article class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg shadow-brand-blue/5 transition hover:shadow-xl hover:-translate-y-1 dark:border-white/10 dark:bg-white/5 dark:shadow-none">
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-brand-blue/10 text-brand-blue dark:bg-brand-gold/10 dark:text-brand-gold mb-4">
                  {Icon && <Icon class="h-6 w-6" />}
                </div>
                <h4 class="text-base font-bold text-gray-900 dark:text-white">
                  {pain.title}
                </h4>
                <p class="mt-2 text-sm leading-relaxed text-gray-600 dark:text-gray-400">
                  {pain.description}
                </p>
              </article>
            );
          })
        }
      </div>

      <div
        class="grid gap-8 rounded-[2.5rem] border border-gray-200 bg-white p-5 text-sm text-gray-700 shadow-lg shadow-brand-blue/5 dark:border-white/10 dark:bg-white/5 dark:text-gray-200 dark:shadow-none sm:p-8 lg:grid-cols-[1.1fr_0.9fr] lg:items-stretch"
      >
        <div class="flex flex-col justify-center space-y-8">
          <div class="space-y-3">
            <SectionSubtitle>Hands-on Engineering</SectionSubtitle>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white">
              Architektur-Reviews, die direkt im Editor landen.
            </h3>
            <p class="leading-6 text-gray-700 dark:text-gray-300">
              Strategie endet bei mir nicht im Deck. Zwischen Architecture
              Boards, Security-Reviews und Delivery sitze ich selbst im Code,
              begleite Deployments und dokumentiere Entscheidungen für Product,
              Security und Betrieb.
            </p>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              Ergebnis: Systeme, die prüfbar sind – und Artefakte, die Ihr Team
              ohne externe Feuerwehr weiterpflegt.
            </p>
          </div>
          <div
            class="space-y-3 border-t border-gray-100 pt-6 dark:border-white/10"
          >
            <SectionSubtitle>Arbeitsweise</SectionSubtitle>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white">
              Strategy-to-Execution mit Verantwortung.
            </h3>
            <p class="text-gray-700 dark:text-gray-300">
              Ich starte mit Ihrem Engpass (z. B. Medienbrüche, Personalmangel,
              Aufsichtsanforderungen) und baue von dort aus Architektur-Slices,
              Operating Models und Delivery-Workstreams auf. Security,
              Datenschutz und Enablement laufen nicht nebenher, sondern sind
              Bestandteil jedes Meilensteins.
            </p>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              Reviews · Architecture Boards · Shadowing · Enablement
            </p>
          </div>

          <div
            class="space-y-4 border-t border-gray-100 pt-6 dark:border-white/10"
          >
            <div class="grid gap-4 sm:grid-cols-2">
              <div
                class="rounded-lg border border-red-200 bg-red-50 p-4 dark:border-red-800 dark:bg-red-900/20"
              >
                <h4
                  class="text-sm font-semibold text-red-800 dark:text-red-400 mb-2"
                >
                  So arbeite ich nicht
                </h4>
                <ul class="text-sm text-red-700 dark:text-red-300 space-y-1">
                  <li>• PoC-Spielzeug ohne Produktivierung</li>
                  <li>• Blackbox-AI ohne Governance</li>
                  <li>• Reine Prompt-Bastelei</li>
                  <li>• Consulting-Decks ohne Code</li>
                </ul>
              </div>
              <div
                class="rounded-lg border border-green-200 bg-green-50 p-4 dark:border-green-800 dark:bg-green-900/20"
              >
                <h4
                  class="text-sm font-semibold text-green-800 dark:text-green-400 mb-2"
                >
                  So arbeite ich
                </h4>
                <ul
                  class="text-sm text-green-700 dark:text-green-300 space-y-1"
                >
                  <li>• Architektur + Infra + Integration</li>
                  <li>• Security & Compliance by Design</li>
                  <li>• Hands-on im Code & Deployment</li>
                  <li>• Enablement & Team-Verantwortung</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <figure
          class="flex min-h-[340px] flex-col overflow-hidden rounded-4xl bg-brand-dark/90 shadow-lg shadow-brand-blue/10 dark:bg-white/5 dark:shadow-none ring-1 ring-gray-900/5 dark:ring-white/10"
        >
          <Image
            src={programmingImage}
            alt="Patrik arbeitet an zwei Monitoren mit Code und Infrastruktur-Dashboards."
            class="h-full w-full flex-1 object-cover opacity-90 mix-blend-luminosity hover:mix-blend-normal transition-all duration-700"
            widths={[400, 800, 1200]}
            format="avif"
            loading="lazy"
          />
          <figcaption
            class="bg-white/95 p-6 text-sm text-gray-600 dark:bg-black/40 dark:backdrop-blur-md dark:text-gray-300 border-t border-gray-100 dark:border-white/10"
          >
            „Deep Engineering" heißt: Architekturentscheidungen entstehen dort,
            wo sie implementiert und observiert werden.
          </figcaption>
        </figure>
      </div>

      <dl
        class="grid gap-8 rounded-[2.5rem] border border-gray-200 bg-white p-8 text-sm shadow-lg shadow-brand-blue/5 sm:grid-cols-3 dark:border-white/10 dark:bg-white/5 dark:text-gray-200 dark:shadow-none"
      >
        {
          serviceStats.map((stat, index) => {
            const dividerClass =
              index === 0
                ? ""
                : "sm:border-l sm:pl-8 border-gray-200 dark:border-white/10";

            return (
              <div class={`space-y-2 text-left ${dividerClass}`}>
                <dt class="text-sm leading-6 text-gray-600 dark:text-gray-400">
                  {stat.label}
                </dt>
                <dd class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white">
                  {stat.value}
                </dd>
              </div>
            );
          })
        }
      </dl>
    </div>
  </section>

  <section
    class="relative bg-white dark:bg-brand-dark overflow-hidden py-12 sm:py-16"
  >
    <div class="mx-auto max-w-7xl px-4 pt-8 sm:px-6 lg:px-8">
      <div class="text-center max-w-2xl mx-auto">
        <SectionSubtitle>Deep Dives</SectionSubtitle>
        <h2
          class="mt-4 text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
        >
          Drei Wege zur Entlastung
        </h2>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
          Von der Prozessautomatisierung über stabile Systemlandschaften bis zum
          nachhaltigen Team-Enablement.
        </p>
      </div>
    </div>

    <ServiceArticle
      subtitle="Prozesse entlasten"
      title="Prozesse automatisieren & Medienbrüche abbauen"
      imagePosition="right"
      image="https://images.unsplash.com/photo-1716637644831-e046c73be197?q=80&w=2940&auto=format&fit=crop"
      imageAlt="Smartphone fotografiert einen Laptop, auf dessen Bildschirm ein leuchtendes, KI-inspiriertes Gehirn im Profil zu sehen ist – Symbol für moderne AI-Lösungen und digitale Innovation."
      paragraphs={{
        intro:
          "Viele KMU kämpfen mit Copy-Paste, Mehrfacherfassung und fehlender Transparenz. Ich baue Automationen und KI-Assistants, die direkt in bestehende Systeme greifen, Medienbrüche schließen und Mitarbeitende spürbar entlasten – ohne die Kontrolle zu verlieren.",
        details: [
          {
            heading: "Auslöser im Alltag",
            text: "Angebote, Reklamationen, Service-Cases und interne Freigaben laufen über Excel, Word und E-Mail. Wissen steckt in Köpfen, die oft nicht verfügbar sind.",
          },
          {
            heading: "Ansatz",
            text: "RAG-Assistenten, Tool-Use-Agenten und orchestrierte LLM-Flows ersetzen manuelle Schritte. Ich verbinde ERP, CRM oder Branchensoftware mit LangChain, LlamaIndex oder Custom-Stacks.",
          },
          {
            heading: "Was bleibt",
            text: "Durchgängige Prozesse, klare KPIs und wenig Nacharbeit – abgesichert durch Guardrails, Prompt-Evaluierung (DeepEval) sowie Security-by-Design orientiert an BSI IT-Grundschutz und ISO/IEC 27001.",
          },
        ],
      }}
    />

    <ServiceArticle
      subtitle="Stabile Abläufe"
      title="Wissen sichern & Abhängigkeiten reduzieren"
      imagePosition="left"
      image="https://images.unsplash.com/photo-1650295751050-b184e54e177c?q=80&w=2940&auto=format&fit=crop"
      imageAlt="Laptopbildschirm mit farblich hervorgehobenem Programmcode – steht für saubere Software- und KI-Entwicklung."
      paragraphs={{
        intro:
          "Ich moderiere zwischen Operations, IT und Fachbereichen, damit Systeme zuverlässig liefern – selbst wenn Schlüsselpersonen ausfallen. Polyglotte Stacks ermöglichen pragmatische Integrationen statt Großprojekte.",
        details: [
          {
            heading: "Systeme verbinden",
            text: "APIs, Datenpipelines und Integrationen sorgen dafür, dass Daten nur einmal erfasst werden. Backend-Services (FastAPI, NestJS, Micronaut, Laravel) liefern Streaming, WebSockets und Event-Driven Flows.",
          },
          {
            heading: "Lieferfähig bleiben",
            text: "Cloud- und On-Prem-Setups (AWS, Azure, GCP) werden mit Terraform, Docker/Kubernetes sowie GitHub Actions/GitLab CI betrieben – inklusive Observability mit Prometheus/Grafana oder ELK.",
          },
          {
            heading: "Governance & Compliance",
            text: "OAuth2, Keycloak, RBAC/IAM, Threat Modeling und Vorbereitung auf Audits nach ISO 27001 oder BSI 200-x reduzieren Abhängigkeiten von Einzelpersonen und sorgen für dokumentierte Verantwortlichkeiten.",
          },
        ],
      }}
    />

    <ServiceArticle
      subtitle="Enablement"
      title="Team befähigen & Skepsis abbauen"
      imagePosition="right"
      image="https://images.unsplash.com/photo-1703680968885-22659eb00165?q=80&w=2940&auto=format&fit=crop"
      imageAlt="Leerer Hörsaal mit Reihen aus Holzstühlen im Sonnenlicht – symbolisiert Wissenstransfer, Schulungen und Vorträge."
      paragraphs={{
        intro:
          "Über 100 Teilnehmende pro Jahr in maßgeschneiderten Trainings – ergänzt durch interne Upskilling-Programme. Ich begleite Teams so, dass neue Systeme nicht an Widerstand oder fehlender Dokumentation scheitern.",
        details: [
          {
            heading: "Curriculum & Upskilling",
            text: "Workshops zu moderner Softwarearchitektur, GenAI, DevOps und Security-by-Design – zugeschnitten auf Rollen von Product bis Operations.",
          },
          {
            heading: "Coaching im Betrieb",
            text: "Pair-Architecture, Reviews, Code- & Prompt-Clinics sowie Shadowing für Product & Engineering Leads sichern, dass Entscheidungen verstanden und getragen werden.",
          },
          {
            heading: "Change & Wissen",
            text: "Assessments, Lernpfade, Runbooks und Wissensdatenbanken (Notion, Confluence, Git) sorgen dafür, dass Know-how nicht wieder in Silos verschwindet.",
          },
        ],
      }}
    />
  </section>

  <section class="bg-white px-4 py-12 dark:bg-brand-dark sm:px-12 lg:py-24">
    <div class="mx-auto max-w-6xl space-y-12">
      <div class="space-y-4 text-center max-w-2xl mx-auto">
        <SectionSubtitle>Leistungsbausteine</SectionSubtitle>
        <h2
          class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
        >
          Architektur, Delivery &amp; Enablement.
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Jeder Baustein kann als Solo-Mandat oder kombiniert mit anderen
          Engagement Modes beauftragt werden.
        </p>
      </div>
      <div
        class="isolate mx-auto mt-10 grid w-full grid-cols-1 gap-y-8 lg:mx-auto lg:max-w-5xl lg:grid-cols-2 lg:items-stretch lg:gap-x-8"
      >
        {
          servicePillars.map((pillar) => {
            return (
              <div class="flex h-full flex-col justify-between rounded-2xl bg-white p-8 shadow-lg shadow-brand-blue/5 ring-1 ring-gray-200 transition-all hover:shadow-xl hover:-translate-y-1 dark:bg-white/5 dark:ring-white/10 dark:shadow-none">
                <div class="flex flex-1 flex-col">
                  <div class="flex items-center gap-3 mb-4">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-brand-blue/10 text-brand-blue dark:bg-brand-gold/10 dark:text-brand-gold">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-6 h-6"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
                        />
                      </svg>
                    </div>
                    <div class="text-xs font-medium text-brand-blue dark:text-brand-gold/80 uppercase tracking-wider">
                      {pillar.subtitle.split("·")[0]}
                    </div>
                  </div>

                  <h3
                    id={pillar.title.toLowerCase().replace(/\s+/g, "-")}
                    class="text-xl font-bold text-gray-900 dark:text-white"
                  >
                    {pillar.title}
                  </h3>

                  <p class="mt-4 text-base leading-relaxed text-gray-600 dark:text-gray-300">
                    {pillar.description}
                  </p>

                  <div class="mt-8">
                    <p class="text-sm font-semibold text-gray-900 dark:text-white">
                      Was Sie erhalten
                    </p>
                    <ul
                      role="list"
                      class="mt-4 space-y-3 text-sm leading-6 text-gray-600 dark:text-gray-400"
                    >
                      {pillar.deliverables.map((item) => (
                        <li class="flex gap-x-3">
                          <svg
                            viewBox="0 0 20 20"
                            fill="currentColor"
                            aria-hidden="true"
                            class="h-6 w-5 flex-none text-brand-blue dark:text-brand-gold"
                          >
                            <path
                              d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z"
                              clip-rule="evenodd"
                              fill-rule="evenodd"
                            />
                          </svg>
                          {item}
                        </li>
                      ))}
                    </ul>
                  </div>

                  <div class="mt-6 border-t border-gray-100 pt-4 dark:border-white/10">
                    <p class="text-sm font-semibold text-gray-900 dark:text-white">
                      Ergebnisse &amp; Artefakte
                    </p>
                    <ul class="mt-2 space-y-2 text-sm text-gray-600 dark:text-gray-400 list-disc pl-4 marker:text-gray-400 dark:marker:text-gray-600">
                      {pillar.results.map((result) => (
                        <li>{result}</li>
                      ))}
                    </ul>
                  </div>
                </div>

                <div class="mt-8 border-t border-gray-100 pt-6 dark:border-white/10">
                  <p class="text-xs font-semibold uppercase tracking-wider text-gray-500 dark:text-gray-500">
                    Stack & Werkzeuge
                  </p>
                  <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                    {pillar.stack}
                  </p>
                </div>
              </div>
            );
          })
        }
      </div>
    </div>
  </section>

  <section
    class="bg-white px-4 py-12 dark:bg-brand-dark sm:px-12 lg:py-24 border-t border-gray-100 dark:border-white/5"
  >
    <div class="mx-auto max-w-6xl">
      <div class="space-y-4 text-center max-w-2xl mx-auto">
        <SectionSubtitle>Engagement</SectionSubtitle>
        <h2
          class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
        >
          Modelle für Strategie, Delivery und Sparring.
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Wählen Sie, wie viel Verantwortung Sie abgeben: vom Fractional AI/CIO
          als verlängertem Arm der Geschäftsführung bis zum projektbasierten
          Delivery- oder Sparringsmodell für Ihre Teams.
        </p>
      </div>
      <div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {
          engagementModes.map((mode) => (
            <article class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg shadow-brand-blue/5 transition hover:shadow-xl hover:-translate-y-1 dark:border-white/10 dark:bg-white/5 dark:shadow-none">
              <h3 class="text-lg font-bold text-gray-900 dark:text-white">
                {mode.title}
              </h3>
              <p class="mt-4 text-base leading-relaxed text-gray-600 dark:text-gray-300">
                {mode.description}
              </p>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <section
    class="bg-linear-to-br from-slate-900 via-brand-dark to-black px-4 py-12 text-gray-100 sm:px-12 lg:py-16"
  >
    <div class="mx-auto max-w-6xl space-y-10">
      <div class="space-y-3">
        <p
          class="text-xs font-semibold uppercase tracking-[0.3em] text-brand-gold"
        >
          Tooling &amp; Observability
        </p>
        <h2 class="text-2xl font-semibold text-white sm:text-3xl">
          Kuratierte Stacks für LLM, Cloud &amp; Security.
        </h2>
      </div>
      <div class="grid gap-10 lg:grid-cols-3">
        <div>
          <p
            class="text-sm font-semibold uppercase tracking-widest text-brand-gold"
          >
            LLM &amp; RAG
          </p>
