---
import BaseLayout from "../layouts/BaseLayout.astro";

const insightDrafts = [
  {
    title: "RAG & Tool-Use in regulierten Branchen",
    timeframe: "in Arbeit · basierend auf Projekten beim Universitätsklinikum Bonn",
    summary:
      "Wie sich Datenschutz, DPIA und klinische Prozesse mit Multi-LLM-Orchestrierung und Micronaut/Kotlin-Services vereinen lassen – inklusive Guardrails, IAM und Auditability.",
    tags: ["GenAI", "Healthcare", "Security-by-Design"],
  },
  {
    title: "Event-getriebene Datenanreicherung für E-Commerce",
    timeframe: "Preview · FlowCraftDB",
    summary:
      "Architektur einer event-driven GenAI-Plattform: LangChain, FastAPI, Kubernetes, AWS/Azure, Observability und KPI-Loops mit DeepEval.",
    tags: ["RAG", "LangChain", "Observability", "E-Commerce"],
  },
  {
    title: "Enablement-Playbooks für KI-Teams",
    timeframe: "Draft · Nextise · ptm-Akademie · GFU Cyrus AG",
    summary:
      "Curriculum-Design, Shadowing und KPI-Frameworks für Trainingsprogramme, die Softwareentwicklung, GenAI und Security zusammenbringen.",
    tags: ["Academy", "Coaching", "Change"],
  },
  {
    title: "Security-by-Design trifft Multi-Cloud",
    timeframe: "Outline · CANCOM & AICT Group",
    summary:
      "Wie BSI IT-Grundschutz, ISO 27001, IAM und Privacy-by-Design in multi-cloudfähige GenAI-Stacks integriert werden können.",
    tags: ["Security", "Cloud", "Governance"],
  },
];
---

<BaseLayout>
  <section class="bg-white px-6 py-16 lg:px-12">
    <div class="mx-auto max-w-3xl text-center">
      <p class="text-sm font-semibold uppercase tracking-widest text-indigo-600">
        Insights &amp; Playbooks
      </p>
      <h1 class="mt-2 text-4xl font-bold text-gray-900">Wissensbasis in Arbeit</h1>
      <p class="mt-4 text-base text-gray-600">
        Meine Projekte liefern kontinuierlich neue Learnings. Die folgenden
        Artikel befinden sich in Aufbereitung; gerne teile ich Inhalte vorab in
        einem Austausch oder Workshop.
      </p>
    </div>
  </section>

  <section class="bg-gray-50 px-6 pb-20 lg:px-12">
    <div class="mx-auto max-w-5xl space-y-6">
      {insightDrafts.map((draft) => (
        <article class="rounded-3xl border border-gray-200 bg-white p-6 shadow-sm">
          <p class="text-xs font-semibold uppercase tracking-wide text-indigo-600">
            {draft.timeframe}
          </p>
          <h2 class="mt-2 text-2xl font-bold text-gray-900">{draft.title}</h2>
          <p class="mt-3 text-sm text-gray-600">{draft.summary}</p>
          <div class="mt-4 flex flex-wrap gap-2 text-xs font-semibold uppercase tracking-wide text-gray-500">
            {draft.tags.map((tag) => (
              <span class="rounded-full bg-gray-100 px-3 py-1">{tag}</span>
            ))}
          </div>
        </article>
      ))}
    </div>

    <div class="mx-auto mt-10 max-w-3xl text-center text-sm text-gray-600">
      <p>
        Interesse an einem bestimmten Thema? Schreiben Sie an{" "}
        <a
          href="mailto:info@garten.ai?subject=Blog%20oder%20Whitepaper"
          class="font-semibold text-indigo-600 underline-offset-4 hover:underline"
          >info@garten.ai</a
        >
        oder vernetzen Sie sich auf{" "}
        <a
          href="https://www.linkedin.com/in/paifgx"
          target="_blank"
          rel="noopener noreferrer"
          class="font-semibold text-indigo-600 underline-offset-4 hover:underline"
          >LinkedIn</a
        >.
      </p>
    </div>
  </section>
</BaseLayout>
