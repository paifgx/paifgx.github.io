---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.vue";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

import {
  business,
  contact,
  siteMeta,
  pathNames,
  getPostalAddress,
} from "../config/site";
import { inlineThemeScript } from "../utils/themeInline";
import ConsentToast from "../components/ConsentToast.astro";

const currentPath = Astro.url.pathname;
const canonicalURL = new URL(Astro.url.pathname, siteMeta.origin);
const domain = Astro.site ? new URL(Astro.site).hostname : "garten.ai";

const {
  classDefintion,
  title,
  description,
  type = "website",
  image = siteMeta.ogImage,
  noindex = false,
} = Astro.props;

const pageTitle = title ? `${title} · ${business.owner}` : siteMeta.title;
const pageDescription = description || siteMeta.description;
const ogImageURL = new URL(image, siteMeta.origin).href;
const mainClass = classDefintion ?? "";

const pathSegments = currentPath.split("/").filter(Boolean);

const breadcrumbItems = [
  {
    "@type": "ListItem",
    position: 1,
    name: "Startseite",
    item: siteMeta.origin,
  },
];

pathSegments.forEach((segment, index) => {
  const url = `${siteMeta.origin}/${pathSegments.slice(0, index + 1).join("/")}/`;
  const name = pathNames[segment] || segment;
  breadcrumbItems.push({
    "@type": "ListItem",
    position: index + 2,
    name,
    item: url,
  });
});

const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Person",
      name: business.owner,
      jobTitle: "AI Solution Architect & Software Engineer",
      url: `${siteMeta.origin}/about`,
      sameAs: [
        contact.linkedin.url,
        contact.websites.main,
        contact.websites.dev,
        `mailto:${contact.email}`,
      ],
      worksFor: {
        "@type": "Organization",
        name: business.company,
      },
    },
    {
      "@type": "ProfessionalService",
      name: business.company,
      url: siteMeta.origin,
      image: ogImageURL,
      areaServed: ["Deutschland", "Österreich", "Schweiz"],
      availableLanguage: ["de", "en"],
      serviceType: [
        "AI Solution Architecture",
        "Generative AI Enablement",
        "Software Engineering",
      ],
      address: getPostalAddress(),
      telephone: contact.phoneDisplay,
      email: contact.email,
    },
    ...(pathSegments.length > 0
      ? [
          {
            "@type": "BreadcrumbList",
            itemListElement: breadcrumbItems,
          },
        ]
      : []),
  ],
};
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="canonical" href={canonicalURL} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <meta name="author" content={business.owner} />
    <meta name="generator" content={Astro.generator} />

    <link rel="alternate" hreflang="de" href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={canonicalURL} />

    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={siteMeta.locale} />
    <meta property="og:site_name" content={business.company} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImageURL} />
    <meta name="twitter:creator" content="@paifgx" />

    <meta name="color-scheme" content="light dark" />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: light)"
      content="#ffffff"
    />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: dark)"
      content="#02040a"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preconnect" href="https://images.unsplash.com" />
    <link rel="dns-prefetch" href="https://images.unsplash.com" />

    <ClientRouter />

    <script is:inline define:vars={{ domain }}>
      window.__PLAUSIBLE_DOMAIN__ = domain;
    </script>
    <script>
      import { init } from "@plausible-analytics/tracker";

      const CONSENT_KEY = "analytics-consent";
      let initialized = false;

      const hasConsent = () => {
        try {
          return localStorage.getItem(CONSENT_KEY) === "granted";
        } catch {
          return false;
        }
      };

      const maybeInit = () => {
        if (initialized) return;
        const domain = (window as any).__PLAUSIBLE_DOMAIN__;
        if (!domain || domain === "localhost") return;
        if (!hasConsent()) return;

        init({ domain });
        initialized = true;
      };

      (window as any).__grantAnalyticsConsent = () => {
        try {
          localStorage.setItem(CONSENT_KEY, "granted");
        } catch {}
        maybeInit();
      };

      (window as any).__revokeAnalyticsConsent = () => {
        try {
          localStorage.setItem(CONSENT_KEY, "denied");
        } catch {}
      };

      if (hasConsent()) {
        maybeInit();
      }
    </script>

    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify(structuredData)}
    />
    <!-- Prevent FOUC by applying theme before CSS; stays in sync with theme utilities -->
    <script is:inline set:html={inlineThemeScript} />
  </head>
  <body
    class="min-h-screen bg-white text-gray-900 antialiased dark:bg-brand-dark dark:text-gray-100"
  >
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-50 focus:rounded-md focus:bg-brand-blue focus:px-4 focus:py-2 focus:text-white focus:outline-none focus:ring-2 focus:ring-brand-blue focus:ring-offset-2"
    >
      Zum Hauptinhalt springen
    </a>
    <Header currentPath={currentPath} client:load />

    <ConsentToast />

    <main id="main-content" class={mainClass}>
      <slot />
    </main>

    <Footer />
  </body>
</html>
